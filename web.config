<?xml version="1.0" encoding="UTF-8"?>
<configuration>
  <system.webServer>
    
    <!-- URL Rewrite -->
    <rewrite>
      <rules>
        <!-- HTTPS Redirect -->
        <rule name="HTTP to HTTPS redirect" stopProcessing="true">
          <match url="(.*)" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
          </conditions>
          <action type="Redirect" redirectType="Permanent" url="https://{HTTP_HOST}/{R:1}" />
        </rule>
        
        <!-- SEO Redirects - URL italiani/alternativi -->
        <rule name="Contatti to Contattaci" stopProcessing="true">
          <match url="^contatti/?$" />
          <action type="Redirect" url="contattaci" redirectType="Permanent" />
        </rule>
        
        <rule name="Servizi to Services" stopProcessing="true">
          <match url="^servizi/?$" />
          <action type="Redirect" url="services" redirectType="Permanent" />
        </rule>
        
        <rule name="Pricing to Prezzi" stopProcessing="true">
          <match url="^pricing/?$" />
          <action type="Redirect" url="prezzi" redirectType="Permanent" />
        </rule>
          <rule name="About to Chi-siamo" stopProcessing="true">
          <match url="^about/?$" />
          <action type="Redirect" url="chi-siamo" redirectType="Permanent" />
        </rule>        <!-- Astro SPA routing - serve i file index.html dalle cartelle -->
        <rule name="Astro Pages" stopProcessing="true">
          <match url="^(chi-siamo|nfc-ecosystem|prezzi|lavori|services|contattaci|shop)$" />
          <action type="Rewrite" url="{R:1}/index.html" />
        </rule>
        
        <!-- Astro Pages con trailing slash -->
        <rule name="Astro Pages with Slash" stopProcessing="true">
          <match url="^(chi-siamo|nfc-ecosystem|prezzi|lavori|services|contattaci|shop)/$" />
          <action type="Rewrite" url="{R:1}/index.html" />
        </rule>
        
        <!-- Blocco accessi vulnerabili -->
        <rule name="Block WP Admin" stopProcessing="true">
          <match url="^wp-admin(.*)$" />
          <action type="CustomResponse" statusCode="404" statusReason="Not Found" />
        </rule>
        
        <rule name="Block PHP Admin" stopProcessing="true">
          <match url="^(phpmyadmin|pma|admin|administrator)(.*)$" />
          <action type="CustomResponse" statusCode="404" statusReason="Not Found" />
        </rule>
      </rules>
    </rewrite>
      <!-- Security Headers -->
    <httpProtocol>
      <customHeaders>
        <!-- Security Headers basilari -->
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="SAMEORIGIN" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />        <!-- CSP per protezione XSS -->
        <add name="Content-Security-Policy" value="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://www.googletagmanager.com https://www.google-analytics.com https://cloud.umami.is https://region1.google-analytics.com; script-src-elem 'self' 'unsafe-inline' https://www.googletagmanager.com https://www.google-analytics.com https://cloud.umami.is; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https: blob:; connect-src 'self' https://www.google-analytics.com https://region1.google-analytics.com https://analytics.google.com https://cloud.umami.is https://api-gateway.umami.dev https://*.google-analytics.com; frame-ancestors 'self'; object-src 'none'; base-uri 'self';" />
        
        <!-- HSTS policy forte -->
        <add name="Strict-Transport-Security" value="max-age=63072000; includeSubDomains; preload" />
          <!-- COOP per origin isolation -->
        <add name="Cross-Origin-Opener-Policy" value="same-origin" />
        <!-- COEP rimosso per permettere risorse esterne come analytics -->
        
        <!-- Performance Headers -->
        <add name="X-DNS-Prefetch-Control" value="on" />
        
        <!-- Remove server info -->
        <remove name="Server" />
        <remove name="X-Powered-By" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Cache Headers per performance -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00" />
    </staticContent>
    
    <!-- Compressione -->
    <httpCompression>
      <dynamicTypes>
        <add mimeType="text/*" enabled="true" />
        <add mimeType="application/javascript" enabled="true" />
        <add mimeType="application/json" enabled="true" />
      </dynamicTypes>
      <staticTypes>
        <add mimeType="text/*" enabled="true" />
        <add mimeType="application/javascript" enabled="true" />
        <add mimeType="application/json" enabled="true" />
      </staticTypes>
    </httpCompression>
    
  </system.webServer>
</configuration>