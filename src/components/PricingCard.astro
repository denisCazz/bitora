---
export interface Props {
  title: string;
  price: string;
  period?: string;
  description: string;
  features: string[];
  buttonText: string;
  buttonUrl: string;
  highlighted: boolean;
}

const {
  title,
  price,
  period,
  description,
  features,
  buttonText,
  buttonUrl,
  highlighted = false,
} = Astro.props;
---

<div
  class={`bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden transition-transform duration-300 hover:-translate-y-2 ${highlighted ? 'border-2 border-black dark:border-white relative' : 'border border-gray-100 dark:border-gray-700'}`}
>
  {
    highlighted && (
      <div class="absolute top-0 right-0 bg-black dark:bg-white text-white dark:text-black text-xs font-bold px-3 py-1 uppercase tracking-wider">
        Pi√π popolare
      </div>
    )
  }
  <div class="p-8">
    <h3 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white">{title}</h3>
    <div class="mb-4">
      <span class="text-4xl font-bold text-gray-900 dark:text-white">{price}</span>
      {period && <span class="text-gray-500 dark:text-gray-400">/{period}</span>}
    </div>
    <p class="text-gray-600 dark:text-gray-300 mb-6">{description}</p>

    <ul class="space-y-3 mb-8">
      {
        features.map(feature => (
          <li class="flex items-center">
            <svg
              class="w-5 h-5 mr-2 text-black dark:text-white"
              xmlns="http://www.w3.org/2000/svg"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z"
                clip-rule="evenodd"
              />
            </svg>            <span class="text-gray-600 dark:text-gray-300">{feature}</span>
          </li>
        ))
      }
    </ul>

    <a
      href={buttonUrl}
      class={`block w-full py-3 px-4 text-center font-bold rounded-md transition-colors ${highlighted ? 'bg-primary text-white hover:bg-primary-600' : 'border border-primary text-primary hover:bg-primary hover:text-white'}`}
    >
      {buttonText}
    </a>
  </div>
</div>
