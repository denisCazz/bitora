---

<section class="py-24 bg-white">
  <div class="container mx-auto px-4">
    <div class="text-center mb-20">
      <h2 class="text-4xl md:text-5xl font-bold mb-6">I Nostri Servizi</h2>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Soluzioni complete per una presenza online distintiva ed efficace.
      </p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-10">
      {
        features.map(feature => (
          <div class="p-8 bg-white border border-gray-100 rounded-lg shadow-sm hover:shadow-md hover:-translate-y-1 transition-all duration-300">
            <div class="text-black mb-6 w-12 h-12 flex items-center justify-center bg-gray-50 rounded-lg">
              <Fragment set:html={feature.icon} />
            </div>
            <h3 class="text-xl font-bold mb-4">{feature.title}</h3>
            <p class="text-gray-600 leading-relaxed">{feature.description}</p>
          </div>
        ))
      }
    </div>
  </div>
</section>
