<script>
  // Calcolatore ROI realistico
  function updateSliderValues() {
    const customersSlider = document.getElementById('monthly-customers') as HTMLInputElement;
    const valueSlider = document.getElementById('average-value') as HTMLInputElement;
    const customersDisplay = document.getElementById('customers-value');
    const valueDisplay = document.getElementById('value-amount');
    
    if (customersSlider && customersDisplay) {
      customersDisplay.textContent = customersSlider.value;
      customersSlider.addEventListener('input', () => {
        customersDisplay.textContent = customersSlider.value;
      });
    }
    
    if (valueSlider && valueDisplay) {
      valueDisplay.textContent = `‚Ç¨${valueSlider.value}`;
      valueSlider.addEventListener('input', () => {
        valueDisplay.textContent = `‚Ç¨${valueSlider.value}`;
      });
    }
  }
  
  function calculateROI() {
    const businessType = (document.getElementById('business-type') as HTMLSelectElement).value;
    const monthlyCustomers = parseInt((document.getElementById('monthly-customers') as HTMLInputElement).value);
    const averageValue = parseInt((document.getElementById('average-value') as HTMLInputElement).value);
    const onlinePresence = document.querySelector('input[name="online-presence"]:checked') as HTMLInputElement;
    
    // Moltiplicatori realistici basati sui dati dei clienti
    const multipliers = {
      restaurant: { growth: 0.22, baseIncrease: 0.15 },
      hotel: { growth: 0.18, baseIncrease: 0.12 },
      professional: { growth: 0.35, baseIncrease: 0.25 },
      retail: { growth: 0.28, baseIncrease: 0.20 }
    };
    
    // Aggiustamenti per presenza online esistente
    const presenceAdjustment = {
      none: 1.0,
      basic: 0.7,
      advanced: 0.4
    };
    
    const multiplier = multipliers[businessType as keyof typeof multipliers] || multipliers.restaurant;
    const adjustment = presenceAdjustment[onlinePresence.value as keyof typeof presenceAdjustment] || 1.0;
    
    // Calcoli realistici
    const baseGrowth = multiplier.growth * adjustment;
    const newCustomersPerMonth = Math.round(monthlyCustomers * baseGrowth);
    const monthlyRevenue = Math.round(newCustomersPerMonth * averageValue);
    const annualRevenue = monthlyRevenue * 12;
    
    // Costi realistici (investimento medio)
    const averageInvestment = businessType === 'professional' ? 690 : 
                             businessType === 'hotel' ? 1290 : 890;
    
    const yearlyROI = Math.round(((annualRevenue - averageInvestment) / averageInvestment) * 100);
    const paybackMonths = Math.ceil(averageInvestment / monthlyRevenue);
    
    // Mostra i risultati
    const resultsDiv = document.getElementById('roi-results');
    if (resultsDiv) {
      resultsDiv.classList.remove('hidden');
      resultsDiv.scrollIntoView({ behavior: 'smooth', block: 'center' });
    }
    
    // Aggiorna i valori
    const newCustomersEl = document.getElementById('new-customers');
    const monthlyRevenueEl = document.getElementById('monthly-revenue');
    const yearlyROIEl = document.getElementById('yearly-roi');
    const paybackTimeEl = document.getElementById('payback-time');
    
    if (newCustomersEl) newCustomersEl.textContent = `+${newCustomersPerMonth}`;
    if (monthlyRevenueEl) monthlyRevenueEl.textContent = `‚Ç¨${monthlyRevenue.toLocaleString()}`;
    if (yearlyROIEl) yearlyROIEl.textContent = `${yearlyROI}%`;
    if (paybackTimeEl) paybackTimeEl.textContent = `${paybackMonths} mesi`;
  }
  
  // Inizializza gli slider
  document.addEventListener('DOMContentLoaded', updateSliderValues);
</script>
