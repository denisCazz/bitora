          <a href="/contattaci?plan=Starter" class="px-6 py-4 border border-primary text-primary rounded-lg font-semibold hover:bg-primary hover:text-white transition-colors">Prova ora</a>
        </div>
      </div>
      <div class="relative">
        <img src="/nfc.png" alt="Cliente che avvicina il telefono alla tessera NFC" class="w-full rounded-2xl shadow-2xl" loading="lazy" />
      </div>
    </div>
  </section>

  <!-- Per Settore -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4">
      <h2 class="text-3xl md:text-4xl font-bold text-center mb-12">Pensato per il tuo settore</h2>
      <div class="grid md:grid-cols-3 gap-6 max-w-6xl mx-auto">
