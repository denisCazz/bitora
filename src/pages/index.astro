---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';

const testimonials = [
  {
    quote: "Il mio sito vetrina è stato pronto in soli 3 giorni! Molto soddisfatti del risultato e del servizio.",
    author: "Kristina",
    company: "Sartoria Kristina",
    image: "../../src/assets/sartoria_kristina.png"
  },
  {
    quote: "Professionalità e rapidità. La mia guesthouse ora ha un sito web moderno e funzionale.",
    author: "Elisa",
    company: "Langamore Guesthouse",
    image: "../../src/assets/langamore.jpg"
  },
];
---

<Layout title="Home - Siti Vetrina in Tempi Record">
  <Hero />
  
  <Features />
  
  <!-- Process Section -->
  <section class="py-20 bg-gray-50">
	<div class="container mx-auto px-4">
	  <div class="text-center mb-16">
		<h2 class="text-3xl md:text-4xl font-bold mb-4">Come Funziona</h2>
		<p class="text-lg text-gray-600 max-w-2xl mx-auto">
		  Realizziamo il tuo sito web in soli 4 semplici passaggi
		</p>
	  </div>
  
	  <div class="relative flex flex-col md:flex-row items-center justify-between">
		<!-- Linea temporale -->
		<div class="absolute hidden md:block top-8 left-0 right-0 h-1 bg-blue-300 w-10/12 mx-auto"></div>
  
		<!-- Step 1 -->
		<div class="relative text-center group">
		  <div class="w-16 h-16 text-white rounded-full bg-blue-800 flex items-center justify-center text-2xl font-bold mx-auto mb-4 transition-transform duration-300 group-hover:scale-110">
			1
		  </div>
		  <h3 class="text-xl font-semibold mb-2">Consulenza</h3>
		  <p class="text-gray-600">Analisi delle tue esigenze e scelta del template più adatto.</p>
		</div>
  
		<!-- Step 2 -->
		<div class="relative text-center group">
		  <div class="w-16 h-16 text-white rounded-full bg-blue-800 flex items-center justify-center text-2xl font-bold mx-auto mb-4 transition-transform duration-300 group-hover:scale-110">
			2
		  </div>
		  <h3 class="text-xl font-semibold mb-2">Personalizzazione</h3>
		  <p class="text-gray-600">Adattiamo il template al tuo brand e alle tue esigenze.</p>
		</div>
  
		<!-- Step 3 -->
		<div class="relative text-center group">
		  <div class="w-16 h-16 text-white rounded-full bg-blue-800 flex items-center justify-center text-2xl font-bold mx-auto mb-4 transition-transform duration-300 group-hover:scale-110">
			3
		  </div>
		  <h3 class="text-xl font-semibold mb-2">Revisione</h3>
		  <p class="text-gray-600">Verifica e approvazione del sito prima della pubblicazione.</p>
		</div>
  
		<!-- Step 4 -->
		<div class="relative text-center group">
		  <div class="w-16 h-16 text-white rounded-full bg-blue-800 flex items-center justify-center text-2xl font-bold mx-auto mb-4 transition-transform duration-300 group-hover:scale-110">
			4
		  </div>
		  <h3 class="text-xl font-semibold mb-2">Pubblicazione</h3>
		  <p class="text-gray-600">Messa online del sito con dominio e hosting configurati.</p>
		</div>
	  </div>
	</div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">Cosa Dicono i Nostri Clienti</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Ecco alcune testimonianze di clienti soddisfatti
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8">
        {testimonials.map(testimonial => (
          <div class="p-6 bg-gray-50 rounded-xl">
            <div class="flex items-center mb-4">
              <img 
                src={testimonial.image} 
                alt={testimonial.author}
                class="w-12 h-12 rounded-full mr-4 object-cover"
              />
              <div>
                <h4 class="font-semibold">{testimonial.author}</h4>
                <p class="text-sm text-gray-600">{testimonial.company}</p>
              </div>
            </div>
            <p class="text-gray-600 italic">"{testimonial.quote}"</p>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-r from-primary-600 to-secondary-700">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl md:text-4xl font-bold mb-6">Pronto per Avere il Tuo Sito Web?</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Contattaci oggi stesso per una consulenza gratuita e scopri come possiamo aiutarti.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/prezzi" class="px-6 py-3 border rounded-lg font-medium hover:bg-blue-200">
          Scopri i Prezzi
        </a>
        <a href="/contattaci" class="px-6 py-3 border rounded-lg font-medium hover:bg-blue-400">
          Contattaci
        </a>
      </div>
    </div>
  </section>
</Layout>
