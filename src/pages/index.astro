---
import Layout from '../layouts/Layout.astro';
import { testimonials } from '../data/testimonials';
import ClientLogos from '../components/ClientLogos.astro';

const pricing = [
  {
    title: 'Sito Essenziale',
    price: '20',
    period: '/mese',
    description: 'La tua presenza online professionale, gestita interamente da noi.',
    features: ['Fino a 5 pagine', 'Dominio & Hosting inclusi', 'Design Mobile-First', 'Supporto WhatsApp'],
    highlight: false
  },
  {
    title: 'Combo Start',
    price: '39',
    period: '/mese',
    description: 'Il pacchetto completo per chi vuole dominare online e offline.',
    features: ['Sito Web Completo', 'Ecosistema NFC incluso', 'Bitora CRM integrato', 'Consulenza mensile'],
    highlight: true
  },
  {
    title: 'Landing Performance',
    price: '300',
    period: 'una tantum',
    description: 'Per campagne Google Ads e lead generation ad alta conversione.',
    features: ['Copywriting persuasivo', 'Ottimizzazione A/B', 'Analytics avanzati', 'Setup Google Ads'],
    highlight: false
  }
];
---

<Layout
  title="Partner tecnologico per aziende e professionisti in Piemonte | Bitora"
  description="Bitora è il partner tecnologico di riferimento a Carmagnola, Torino e in tutto il Piemonte: consulenza digitale su misura, siti web ad alte prestazioni, ecosistemi NFC e strategie SEO ottimizzate anche per motori AI."
>
  <main class="bg-black text-white overflow-x-hidden selection:bg-indigo-500 selection:text-white">
    
    <!-- Hero Section -->
    <section class="relative h-screen flex flex-col justify-center items-center text-center px-4">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-indigo-900/20 via-black to-black opacity-50"></div>
      
      <div class="relative z-10 max-w-5xl mx-auto space-y-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
        <div class="inline-flex items-center gap-2 rounded-full border border-white/10 bg-white/5 px-4 py-2 text-xs font-medium uppercase tracking-widest text-gray-400 backdrop-blur-md">
          Partner Tecnologico • Piemonte
        </div>
        <h1 class="text-5xl md:text-8xl font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-white to-white/60">
          Il tuo business,<br />
          amplificato.
        </h1>
        <p class="text-xl md:text-2xl text-gray-400 font-light max-w-2xl mx-auto leading-relaxed">
          Progettiamo ecosistemi digitali che uniscono web, NFC e intelligenza artificiale. <br class="hidden md:block" />
          Per aziende che guardano al futuro.
        </p>
        <div class="pt-8 flex flex-col sm:flex-row gap-6 justify-center items-center">
          <a href="/contattaci" class="min-w-[200px] px-8 py-4 bg-white text-black rounded-full font-medium text-lg transition-all hover:scale-105 hover:shadow-[0_0_30px_rgba(255,255,255,0.2)]">
            Inizia ora
          </a>
          <a href="#percorso" class="min-w-[200px] px-8 py-4 bg-white/10 text-white backdrop-blur-md rounded-full font-medium text-lg transition-all hover:bg-white/20 hover:scale-105">
            Scopri il metodo
          </a>
        </div>
      </div>
    </section>

    <!-- Client Logos -->
    <div class="border-y border-white/5 bg-white/[0.02]">
      <ClientLogos />
    </div>

    <!-- Feature 1: Strategy -->
    <section id="percorso" class="py-40 px-6 md:px-12">
      <div class="max-w-7xl mx-auto grid md:grid-cols-2 gap-24 items-center">
        <div class="order-2 md:order-1 space-y-8 reveal-on-scroll">
          <h2 class="text-4xl md:text-6xl font-bold leading-tight tracking-tight">
            Strategia <br />
            <span class="text-indigo-400">prima del codice.</span>
          </h2>
          <p class="text-lg md:text-xl text-gray-400 leading-relaxed font-light">
            Non vendiamo pacchetti preconfezionati. Analizziamo il tuo modello di business, i tuoi dati e il tuo mercato locale per costruire una roadmap digitale su misura.
          </p>
          <ul class="space-y-6 text-gray-300 mt-8">
            <li class="flex items-center gap-4">
              <span class="flex items-center justify-center w-8 h-8 rounded-full bg-white/5 border border-white/10 text-indigo-400">1</span>
              <span class="text-lg">Analisi dedicata al tuo business</span>
            </li>
            <li class="flex items-center gap-4">
              <span class="flex items-center justify-center w-8 h-8 rounded-full bg-white/5 border border-white/10 text-indigo-400">2</span>
              <span class="text-lg">Roadmap digitale personalizzata</span>
            </li>
            <li class="flex items-center gap-4">
              <span class="flex items-center justify-center w-8 h-8 rounded-full bg-white/5 border border-white/10 text-indigo-400">3</span>
              <span class="text-lg">Implementazione e crescita continua</span>
            </li>
          </ul>
        </div>
        <div class="order-1 md:order-2 relative group reveal-on-scroll delay-200">
          <div class="absolute -inset-1 bg-gradient-to-r from-indigo-500 to-purple-500 rounded-3xl opacity-20 blur-2xl group-hover:opacity-30 transition duration-1000"></div>
          <div class="relative rounded-3xl overflow-hidden aspect-square bg-zinc-900 border border-white/10 flex items-center justify-center">
            <img 
              src="https://images.unsplash.com/photo-1460925895917-afdab827c52f?q=80&w=2426&auto=format&fit=crop" 
              alt="Strategia digitale in Piemonte" 
              class="w-full h-full object-cover opacity-80 hover:opacity-100 transition-opacity duration-700"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
          </div>
        </div>
      </div>
    </section>

    <!-- Feature 2: AI & SEO -->
    <section class="py-40 px-6 md:px-12 bg-zinc-900/30">
      <div class="max-w-7xl mx-auto grid md:grid-cols-2 gap-24 items-center">
        <div class="relative group reveal-on-scroll order-1">
          <div class="absolute -inset-1 bg-gradient-to-r from-pink-500 to-orange-500 rounded-3xl opacity-20 blur-2xl group-hover:opacity-30 transition duration-1000"></div>
          <div class="relative rounded-3xl overflow-hidden aspect-square bg-zinc-900 border border-white/10 flex items-center justify-center">
             <img 
              src="https://images.unsplash.com/photo-1555066931-4365d14bab8c?q=80&w=2940&auto=format&fit=crop" 
              alt="Sviluppo Web e AI" 
              class="w-full h-full object-cover opacity-80 hover:opacity-100 transition-opacity duration-700"
              loading="lazy"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-transparent to-transparent"></div>
          </div>
        </div>
        <div class="space-y-8 reveal-on-scroll delay-200 order-2">
          <h2 class="text-4xl md:text-6xl font-bold leading-tight tracking-tight">
            Visibilità <br />
            <span class="text-pink-400">intelligente.</span>
          </h2>
          <p class="text-lg md:text-xl text-gray-400 leading-relaxed font-light">
            Ottimizziamo la tua presenza non solo per Google, ma per i motori di risposta AI come ChatGPT e Gemini. Il futuro della ricerca è conversazionale.
          </p>
          <div class="grid grid-cols-2 gap-8 pt-6">
            <div class="bg-white/5 p-6 rounded-2xl border border-white/5">
              <h4 class="text-white font-semibold mb-2 text-lg">SEO Locale</h4>
              <p class="text-sm text-gray-400 leading-relaxed">Dominio nelle ricerche su Carmagnola e Torino.</p>
            </div>
            <div class="bg-white/5 p-6 rounded-2xl border border-white/5">
              <h4 class="text-white font-semibold mb-2 text-lg">AI Ready</h4>
              <p class="text-sm text-gray-400 leading-relaxed">Dati strutturati per gli assistenti virtuali.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Pricing -->
    <section id="investimenti" class="py-40 px-6">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-24 reveal-on-scroll">
          <h2 class="text-4xl md:text-6xl font-bold mb-6 tracking-tight">Investimenti Chiari</h2>
          <p class="text-xl text-gray-400 font-light">Nessuna sorpresa. Solo crescita misurabile.</p>
        </div>

        <div class="grid md:grid-cols-3 gap-8">
          {pricing.map((plan, i) => (
            <div class={`relative group reveal-on-scroll`} style={`transition-delay: ${i * 100}ms`}>
              <div class={`absolute inset-0 bg-gradient-to-b ${plan.highlight ? 'from-indigo-600 to-purple-600' : 'from-gray-800 to-gray-900'} rounded-3xl opacity-0 group-hover:opacity-100 transition duration-500 blur-xl`}></div>
              <div class="relative h-full bg-zinc-900 border border-white/10 rounded-3xl p-10 flex flex-col transition-transform duration-300 group-hover:-translate-y-2">
                {plan.highlight && (
                  <div class="absolute -top-4 left-1/2 -translate-x-1/2 bg-white text-black px-4 py-1 rounded-full text-xs font-bold uppercase tracking-wider shadow-lg">
                    Consigliato
                  </div>
                )}
                <h3 class="text-xl font-medium text-gray-300 mb-4">{plan.title}</h3>
                <div class="flex items-baseline gap-1 mb-6">
                  <span class="text-5xl font-bold text-white">€{plan.price}</span>
                  <span class="text-gray-500">{plan.period}</span>
                </div>
                <p class="text-gray-400 mb-8 leading-relaxed text-sm">{plan.description}</p>
                
                <ul class="space-y-4 mb-10 flex-1">
                  {plan.features.map(feat => (
                    <li class="flex items-center gap-3 text-sm text-gray-300">
                      <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                      {feat}
                    </li>
                  ))}
                </ul>

                <a href="/contattaci" class={`w-full py-4 rounded-xl font-semibold text-center transition-all duration-300 hover:scale-[1.02] ${plan.highlight ? 'bg-white text-black shadow-[0_0_20px_rgba(255,255,255,0.2)]' : 'bg-white/10 text-white hover:bg-white/20'}`}>
                  Scegli piano
                </a>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Testimonials -->
    <section class="py-32 px-6 border-t border-white/5">
      <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-3 gap-8">
          {testimonials.slice(0, 3).map(t => (
            <div class="bg-white/5 border border-white/5 p-8 rounded-3xl reveal-on-scroll">
              <div class="flex items-center gap-4 mb-6">
                <img src={t.image} alt={t.company} class="h-12 w-12 rounded-full object-cover bg-white/10" loading="lazy" />
                <div>
                  <p class="text-white font-medium">{t.company}</p>
                  <p class="text-xs text-gray-500 uppercase tracking-wider">{t.role ?? 'Partner'}</p>
                </div>
              </div>
              <p class="text-gray-400 leading-relaxed">"{t.quote}"</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-40 px-6 text-center">
      <div class="max-w-4xl mx-auto reveal-on-scroll">
        <h2 class="text-4xl md:text-7xl font-bold mb-8 tracking-tight">Costruiamo il tuo ecosistema.</h2>
        <p class="text-xl text-gray-400 mb-12 max-w-2xl mx-auto font-light">
          Prenota una call conoscitiva di 30 minuti. <br />
          Analizziamo obiettivi, target e priorità.
        </p>
        <div class="flex flex-col sm:flex-row gap-6 justify-center items-center">
          <a href="/contattaci" class="min-w-[200px] px-8 py-4 bg-white text-black rounded-full font-medium text-lg transition-all hover:scale-105 hover:shadow-[0_0_30px_rgba(255,255,255,0.2)]">
            Prenota Call
          </a>
          <a href="https://wa.me/393514979670" class="min-w-[200px] px-8 py-4 bg-white/10 text-white backdrop-blur-md rounded-full font-medium text-lg transition-all hover:bg-white/20 hover:scale-105">
            WhatsApp
          </a>
        </div>
      </div>
    </section>

  </main>
</Layout>

<script type="application/ld+json" set:html={JSON.stringify({
  '@context': 'https://schema.org',
  '@type': 'ProfessionalService',
  name: 'Bitora',
  image: 'https://bitora.it/bitora.jpg',
  url: 'https://bitora.it',
  areaServed: ['Carmagnola', 'Torino', 'Piemonte'],
  makesOffer: {
    '@type': 'Offer',
    itemOffered: {
      '@type': 'Service',
      name: 'Consulenza digitale su misura',
      provider: 'Bitora',
      areaServed: 'Provincia di Torino'
    },
    priceSpecification: {
      '@type': 'PriceSpecification',
      priceCurrency: 'EUR',
      price: '20',
      description: 'Sito Essenziale mensile'
    }
  }
})}></script>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .reveal-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 1s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .reveal-on-scroll.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.addEventListener('DOMContentLoaded', () => {
    const elements = document.querySelectorAll('.reveal-on-scroll');
    elements.forEach(el => observer.observe(el));
  });
</script>
