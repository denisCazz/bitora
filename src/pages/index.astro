---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import Features from '../components/Features.astro';

const testimonials = [
  {
    quote: "Il mio sito vetrina è stato pronto in soli 3 giorni! Molto soddisfatti del risultato e del servizio.",
    author: "Kristina",
    company: "Sartoria Kristina",
    image: "../../src/assets/sartoria_kristina.png"
  },
  {
    quote: "Servizio impeccabile e grande professionalità. Il nostro sito è moderno e funzionale.",
    author: "Eros",
    company: "Monviso Multiservizi",
    image: "../../src/assets/startup.jpeg"
  },
];
---

<Layout title="Home - Siti Vetrina in Tempi Record">
  <Hero />

  <Features />

  <!-- Process Section -->
  <section class="py-20 bg-gradient-to-b from-gray-50 to-gray-100">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-extrabold text-gray-800 mb-4">Come Funziona</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Realizziamo il tuo sito web in soli 4 semplici passaggi
        </p>
      </div>

      <div class="relative flex flex-col md:flex-row items-center justify-between gap-8">
        <!-- Linea temporale -->
        <div class="absolute hidden md:block top-8 left-0 right-0 h-1 bg-blue-300 w-10/12 mx-auto"></div>

        <!-- Step 1 -->
        <div class="relative text-center group">
          <div class="w-16 h-16 text-white rounded-full bg-gradient-to-r from-blue-500 to-blue-700 flex items-center justify-center text-2xl font-bold mx-auto mb-4 transition-transform duration-300 group-hover:scale-110">
            1
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-800">Consulenza</h3>
          <p class="text-gray-600">Analisi delle tue esigenze e scelta del template più adatto.</p>
        </div>

        <!-- Step 2 -->
        <div class="relative text-center group">
          <div class="w-16 h-16 text-white rounded-full bg-gradient-to-r from-green-500 to-green-700 flex items-center justify-center text-2xl font-bold mx-auto mb-4 transition-transform duration-300 group-hover:scale-110">
            2
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-800">Personalizzazione</h3>
          <p class="text-gray-600">Adattiamo il template al tuo brand e alle tue esigenze.</p>
        </div>

        <!-- Step 3 -->
        <div class="relative text-center group">
          <div class="w-16 h-16 text-white rounded-full bg-gradient-to-r from-purple-500 to-purple-700 flex items-center justify-center text-2xl font-bold mx-auto mb-4 transition-transform duration-300 group-hover:scale-110">
            3
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-800">Revisione</h3>
          <p class="text-gray-600">Verifica e approvazione del sito prima della pubblicazione.</p>
        </div>

        <!-- Step 4 -->
        <div class="relative text-center group">
          <div class="w-16 h-16 text-white rounded-full bg-gradient-to-r from-red-500 to-red-700 flex items-center justify-center text-2xl font-bold mx-auto mb-4 transition-transform duration-300 group-hover:scale-110">
            4
          </div>
          <h3 class="text-xl font-semibold mb-2 text-gray-800">Pubblicazione</h3>
          <p class="text-gray-600">Messa online del sito con dominio e hosting configurati.</p>
        </div>
      </div>
    </div>
  </section>

  <!-- Testimonials Section -->
  <section class="py-20 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-extrabold text-gray-800 mb-4">Cosa Dicono i Nostri Clienti</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Ecco alcune testimonianze di clienti soddisfatti
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {testimonials.map(testimonial => (
          <div class="p-6 bg-white rounded-xl shadow-lg hover:shadow-xl transition-shadow">
            <div class="flex items-center mb-4">
              <img 
                src={testimonial.image} 
                alt={testimonial.author}
                class="w-12 h-12 rounded-full mr-4 object-cover"
              />
              <div>
                <h4 class="font-semibold text-gray-800">{testimonial.author}</h4>
                <p class="text-sm text-gray-600">{testimonial.company}</p>
              </div>
            </div>
            <p class="text-gray-600 italic">"{testimonial.quote}"</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-blue-400 text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-extrabold mb-6">Pronto per Avere il Tuo Sito Web?</h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Contattaci oggi stesso per una consulenza gratuita e scopri come possiamo aiutarti.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/prezzi" class="px-6 py-3 rounded-lg font-medium shadow-lg hover:bg-gray-100 hover:text-black transition-colors">
          <span class="font-bold">Scopri i Prezzi</span>
        </a>
        <a href="/contattaci" class="px-6 py-3 rounded-lg font-medium shadow-lg hover:bg-gray-100 hover:text-black transition-colors">
          <span class="font-bold">Contattaci</span>
        </a>
      </div>
    </div>
  </section>

  <!-- NFC CTA Section -->
  <section class="py-20 bg-gray-100">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-extrabold text-gray-800 mb-6">Tessere NFC Personalizzate</h2>
      <p class="text-lg text-gray-600 mb-8 max-w-2xl mx-auto">
        Scopri come le nostre tessere NFC possono migliorare la tua attività, ideali per recensioni, menu digitali e molto altro.
      </p>
      <a href="/shop" class="px-6 py-3 bg-blue-600 text-white rounded-lg font-medium shadow-lg hover:bg-blue-700 transition-colors">
        Scopri di Più
      </a>
    </div>
  </section>
</Layout>
