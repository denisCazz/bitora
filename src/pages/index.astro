    {
      "@context": "https://schema.org",
      "@type": "BreadcrumbList",
      "itemListElement": [
        {"@type": "ListItem", "position": 1, "name": "Home", "item": "https://bitora.it/"},
        {"@type": "ListItem", "position": 2, "name": "Per Settore", "item": "https://bitora.it/settori"}
