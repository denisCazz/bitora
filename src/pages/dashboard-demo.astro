---
import Layout from '../layouts/Layout.astro';
import { icons } from '../components/Icons';
---

<Layout title="Dashboard - Gestione Ecosistema NFC">  <!-- Navigation Breadcrumb -->
  <nav class="bg-gray-50 dark:bg-gray-800 py-4 border-b border-gray-200 dark:border-gray-700 transition-colors duration-300">
    <div class="container mx-auto px-4">
      <div class="flex items-center space-x-2 text-sm text-gray-600 dark:text-gray-300">
        <a href="/" class="hover:text-indigo-600 dark:hover:text-indigo-400">Home</a>
        <span>/</span>
        <a href="/nfc-ecosystem" class="hover:text-indigo-600 dark:hover:text-indigo-400">Ecosistema NFC</a>
        <span>/</span>
        <span class="text-gray-900 dark:text-white font-medium">Dashboard Demo</span>
      </div>
    </div>
  </nav>

  <!-- Header -->
  <header class="bg-white dark:bg-gray-900 shadow-sm border-b border-gray-200 dark:border-gray-700 transition-colors duration-300">
    <div class="container mx-auto px-4 py-6">
      <div class="flex items-center justify-between">
        <div>
          <h1 class="text-3xl font-bold text-gray-900 dark:text-white">Dashboard Ecosistema NFC</h1>
          <p class="text-gray-600 dark:text-gray-300 mt-1">Gestisci il tuo ecosistema digitale in completa autonomia</p>
        </div>
        <div class="bg-primary text-white px-4 py-2 rounded-lg">
          <span class="text-sm font-medium">Piano Professional</span>
        </div>
      </div>
    </div>
  </header>
  <!-- Stats Overview -->
  <section class="py-8 bg-gray-50 dark:bg-gray-800 transition-colors duration-300">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="bg-white dark:bg-gray-900 rounded-lg p-6 shadow-sm border border-gray-200 dark:border-gray-700">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600 dark:text-gray-300">Interazioni NFC</p>
              <p class="text-3xl font-bold text-gray-900 dark:text-white">2,847</p>
              <p class="text-sm text-green-600 dark:text-green-400 mt-1">
                <span class="font-medium">+12%</span> vs settimana scorsa
              </p>
            </div>
            <div class="w-12 h-12 bg-indigo-100 dark:bg-indigo-900/30 rounded-lg flex items-center justify-center">
              <div class="w-6 h-6 text-indigo-600 dark:text-indigo-400">
                <Fragment set:html={icons.chip} />
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg p-6 shadow-sm border">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Conversazioni AI</p>
              <p class="text-3xl font-bold text-gray-900">1,293</p>
              <p class="text-sm text-green-600 mt-1">
                <span class="font-medium">+8%</span> vs settimana scorsa
              </p>
            </div>
            <div class="w-12 h-12 bg-purple-100 rounded-lg flex items-center justify-center">
              <div class="w-6 h-6 text-purple-600">
                <Fragment set:html={icons.briefcase} />
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg p-6 shadow-sm border">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Tasso Conversione</p>
              <p class="text-3xl font-bold text-gray-900">24.8%</p>
              <p class="text-sm text-green-600 mt-1">
                <span class="font-medium">+3.2%</span> vs settimana scorsa
              </p>
            </div>
            <div class="w-12 h-12 bg-green-100 rounded-lg flex items-center justify-center">
              <div class="w-6 h-6 text-green-600">
                <Fragment set:html={icons.check} />
              </div>
            </div>
          </div>
        </div>

        <div class="bg-white rounded-lg p-6 shadow-sm border">
          <div class="flex items-center justify-between">
            <div>
              <p class="text-sm font-medium text-gray-600">Valutazione Media</p>
              <p class="text-3xl font-bold text-gray-900">4.7</p>
              <p class="text-sm text-yellow-600 mt-1">
                <span class="font-medium">⭐⭐⭐⭐⭐</span> clienti soddisfatti
              </p>
            </div>
            <div class="w-12 h-12 bg-yellow-100 rounded-lg flex items-center justify-center">
              <div class="w-6 h-6 text-yellow-600">
                <Fragment set:html={icons.clock} />
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Main Dashboard Content -->
  <section class="py-8">
    <div class="container mx-auto px-4">
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Left Column -->
        <div class="lg:col-span-2 space-y-8">
          <!-- Analytics Chart -->
          <div class="bg-white rounded-lg p-6 shadow-sm border">
            <div class="flex items-center justify-between mb-6">
              <h3 class="text-lg font-semibold text-gray-900">Interazioni Giornaliere</h3>
              <select class="border border-gray-300 rounded-md px-3 py-1 text-sm">
                <option>Ultimi 7 giorni</option>
                <option>Ultimi 30 giorni</option>
                <option>Ultimi 3 mesi</option>
              </select>
            </div>
            
            <!-- Mock Chart -->
            <div class="h-64 bg-gradient-to-r from-indigo-50 to-purple-50 rounded-lg flex items-end justify-center p-4">
              <div class="flex items-end space-x-2 h-full">
                <div class="bg-indigo-500 rounded-t w-8" style="height: 40%"></div>
                <div class="bg-indigo-500 rounded-t w-8" style="height: 60%"></div>
                <div class="bg-indigo-500 rounded-t w-8" style="height: 45%"></div>
                <div class="bg-indigo-500 rounded-t w-8" style="height: 80%"></div>
                <div class="bg-indigo-500 rounded-t w-8" style="height: 55%"></div>
                <div class="bg-indigo-500 rounded-t w-8" style="height: 90%"></div>
                <div class="bg-indigo-600 rounded-t w-8" style="height: 100%"></div>
              </div>
            </div>
            
            <div class="flex justify-center mt-4 space-x-8 text-sm text-gray-600">
              <span>Lun</span>
              <span>Mar</span>
              <span>Mer</span>
              <span>Gio</span>
              <span>Ven</span>
              <span>Sab</span>
              <span class="font-medium text-indigo-600">Dom</span>
            </div>
          </div>

          <!-- Content Management -->
          <div class="bg-white rounded-lg p-6 shadow-sm border">
            <div class="flex items-center justify-between mb-6">
              <h3 class="text-lg font-semibold text-gray-900">Gestione Contenuti</h3>
              <button class="bg-indigo-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-indigo-700">
                Modifica Contenuti
              </button>
            </div>
            
            <div class="space-y-4">
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="font-medium text-gray-900">Landing Page Principale</h4>
                    <p class="text-sm text-gray-600">Ultimo aggiornamento: 2 ore fa</p>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">Attiva</span>
                    <button class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">Modifica</button>
                  </div>
                </div>
              </div>
              
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="font-medium text-gray-900">Menu Digitale</h4>
                    <p class="text-sm text-gray-600">Ultimo aggiornamento: 1 giorno fa</p>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">Attiva</span>
                    <button class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">Modifica</button>
                  </div>
                </div>
              </div>
              
              <div class="border border-gray-200 rounded-lg p-4">
                <div class="flex items-center justify-between">
                  <div>
                    <h4 class="font-medium text-gray-900">Offerte Speciali</h4>
                    <p class="text-sm text-gray-600">Ultimo aggiornamento: 3 giorni fa</p>
                  </div>
                  <div class="flex items-center space-x-2">
                    <span class="bg-yellow-100 text-yellow-800 text-xs px-2 py-1 rounded-full">Bozza</span>
                    <button class="text-indigo-600 hover:text-indigo-800 text-sm font-medium">Pubblica</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Right Column -->
        <div class="space-y-8">
          <!-- AI Chatbot Status -->
          <div class="bg-white rounded-lg p-6 shadow-sm border">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Stato AI Chatbot</h3>
            
            <div class="space-y-4">
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Stato Operativo</span>
                <span class="bg-green-100 text-green-800 text-xs px-2 py-1 rounded-full">Online</span>
              </div>
              
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Conversazioni Oggi</span>
                <span class="text-sm font-medium text-gray-900">147</span>
              </div>
              
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Tempo Risposta Medio</span>
                <span class="text-sm font-medium text-gray-900">1.2s</span>
              </div>
              
              <div class="flex items-center justify-between">
                <span class="text-sm text-gray-600">Soddisfazione Cliente</span>
                <span class="text-sm font-medium text-gray-900">96%</span>
              </div>
            </div>
            
            <button class="w-full mt-4 bg-gray-100 text-gray-800 py-2 rounded-md text-sm font-medium hover:bg-gray-200">
              Configura AI
            </button>
          </div>

          <!-- Recent Activities -->
          <div class="bg-white rounded-lg p-6 shadow-sm border">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Attività Recenti</h3>
            
            <div class="space-y-3">
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-green-500 rounded-full mt-2"></div>
                <div>
                  <p class="text-sm text-gray-900 font-medium">Nuova prenotazione</p>
                  <p class="text-xs text-gray-600">Cliente: Mario Rossi - 2 min fa</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-blue-500 rounded-full mt-2"></div>
                <div>
                  <p class="text-sm text-gray-900 font-medium">Interazione NFC</p>
                  <p class="text-xs text-gray-600">Menu digitale visualizzato - 5 min fa</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-purple-500 rounded-full mt-2"></div>
                <div>
                  <p class="text-sm text-gray-900 font-medium">Conversazione AI</p>
                  <p class="text-xs text-gray-600">Richiesta info allergeni - 12 min fa</p>
                </div>
              </div>
              
              <div class="flex items-start space-x-3">
                <div class="w-2 h-2 bg-yellow-500 rounded-full mt-2"></div>
                <div>
                  <p class="text-sm text-gray-900 font-medium">Feedback ricevuto</p>
                  <p class="text-xs text-gray-600">⭐⭐⭐⭐⭐ da Anna Bianchi - 1 ora fa</p>
                </div>
              </div>
            </div>
            
            <button class="w-full mt-4 text-indigo-600 text-sm font-medium hover:text-indigo-800">
              Vedi tutte le attività
            </button>
          </div>

          <!-- Quick Actions -->
          <div class="bg-white rounded-lg p-6 shadow-sm border">
            <h3 class="text-lg font-semibold text-gray-900 mb-4">Azioni Rapide</h3>
            
            <div class="space-y-3">
              <button class="w-full bg-primary text-white py-2 rounded-md text-sm font-medium hover:bg-primary-600">
                Aggiorna Menu
              </button>
              
              <button class="w-full bg-primary text-white py-2 rounded-md text-sm font-medium hover:bg-primary-600">
                Crea Offerta
              </button>
              
              <button class="w-full bg-green-600 text-white py-2 rounded-md text-sm font-medium hover:bg-green-700">
                Scarica Report
              </button>
              
              <button class="w-full border border-gray-300 text-gray-700 py-2 rounded-md text-sm font-medium hover:bg-gray-50">
                Supporto Tecnico
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Demo Notice -->
  <section class="py-8 bg-primary">
    <div class="container mx-auto px-4 text-center">
      <div class="bg-white bg-opacity-10 rounded-lg p-6 max-w-2xl mx-auto">
        <h3 class="text-xl font-bold text-white mb-2">Questa è una Demo</h3>
        <p class="text-indigo-100 mb-4">
          Scopri come potresti gestire il tuo ecosistema NFC con un'interfaccia intuitiva e potente.
        </p>
        <div class="flex flex-col sm:flex-row gap-3 justify-center">
          <a
            href="/contattaci"
            class="bg-white text-indigo-600 font-bold py-2 px-6 rounded-md hover:bg-gray-100 transition-colors"
          >
            Richiedi Accesso
          </a>
          <a
            href="/nfc-ecosystem"
            class="border-2 border-white text-white font-bold py-2 px-6 rounded-md hover:bg-white hover:text-indigo-600 transition-colors"
          >
            Torna all'Ecosistema
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@type": "SoftwareApplication",
    "name": "Dashboard Ecosistema NFC - Bitora.it",
    "description": "Pannello di controllo self-service per la gestione dell'ecosistema digitale NFC",
    "applicationCategory": "BusinessApplication",
    "operatingSystem": "Web Browser",
    "offers": {
      "@type": "Offer",
      "price": "0",
      "priceCurrency": "EUR",
      "description": "Incluso nei piani NFC Professional ed Enterprise"
    },
    "featureList": [
      "Analytics interazioni NFC in tempo reale",
      "Gestione contenuti autonoma",
      "Monitoraggio AI chatbot",
      "Report automatici",
      "Configurazione personalizzabile",
      "Supporto tecnico integrato"
    ],
    "provider": {
      "@type": "Organization",
      "name": "Bitora.it",
      "url": "https://bitora.it"
    }
  }
</script>
