  <body>
    <form>
      <label for="plan">Piano Scelto</label>
      <input id="plan" name="plan" type="text" />
    </form>
    <script>
      const params = new URLSearchParams(window.location.search);
      const plan = params.get("plan");
      if (plan) {
        const planElement = document.getElementById("plan") as HTMLInputElement;
        if (planElement) {
          let prepopulatedText = decodeURIComponent(plan);
          if (prepopulatedText.toLowerCase().includes("premium")) {
            prepopulatedText += " - Piano Premium selezionato";
          } else if (prepopulatedText.toLowerCase().includes("basic")) {
            prepopulatedText += " - Piano Base selezionato";
          } else if (prepopulatedText.toLowerCase().includes("enterprise")) {
            prepopulatedText += " - Piano Enterprise selezionato";
          }
          planElement.value = prepopulatedText;
        }
      }
    </script>
  </body>
</html>
