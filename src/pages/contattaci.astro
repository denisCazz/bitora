import Layout from '../layouts/Layout.astro';
---

<Layout title="Contattaci - Iniziamo a Collaborare">
  <!-- Header Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 max-w-3xl text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-8">Contattaci</h1>
      <p class="text-xl text-gray-600 leading-relaxed">
        Hai un progetto in mente? Siamo qui per trasformarlo in realt√†. Contattaci per una consulenza gratuita.
      </p>
    </div>
  </section>

  <!-- Contact Info Section -->
  <section class="py-24 bg-gray-50">
    <div class="container mx-auto px-4 max-w-3xl">
      <div class="text-center bg-white p-12 rounded-lg shadow-md">
        <h2 class="text-3xl font-bold mb-10">Parliamo del Tuo Progetto</h2>
        
        <div class="flex flex-col gap-8 mb-10">
          <div>
            <h3 class="text-xl font-semibold mb-3">Email</h3>
            <a id="email-link" href="mailto:deniscazzulo@icloud.com" class="text-lg text-gray-600 hover:text-black transition-colors">deniscazzulo@icloud.com</a>
          </div>
          
          <div>
            <h3 class="text-xl font-semibold mb-3">Telefono</h3>
            <a href="tel:+393247787644" class="text-lg text-gray-600 hover:text-black transition-colors">+39 324 778 7644</a>
          </div>
          
          <div>
            <h3 class="text-xl font-semibold mb-3">WhatsApp</h3>
            <a id="whatsapp-link-text" href="https://wa.me/393247787644" class="text-lg inline-flex items-center gap-2 text-gray-600 hover:text-black transition-colors">
              <span>+39 324 778 7644</span>
              <svg class="w-5 h-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
