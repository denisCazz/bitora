---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Contattaci - Informazioni di Contatto">
  <!-- Header Section -->
  <section class="py-20 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4 max-w-3xl text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">Contattaci</h1>
      <p class="text-lg text-gray-700 leading-relaxed">
        Siamo qui per aiutarti! Contattaci tramite email o WhatsApp.
      </p>
    </div>
  </section>

  <!-- Contact Info Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4 flex flex-col gap-12">
      <div class="text-center">
        <h2 class="text-3xl font-bold mb-6">Informazioni di Contatto</h2>
        <p class="text-gray-700 mb-4">Email: <a href="mailto:deniscazzulo@icloud.com" class="text-blue-600 hover:underline">deniscazzulo@icloud.com</a></p>
        <p class="text-gray-700">Telefono: <a href="tel:+393247787644" class="text-blue-600 hover:underline">+39 324 778 7644</a></p>
        <p class="text-gray-700 mt-4">Scrivici su WhatsApp: <a href="https://wa.me/393247787644" class="text-green-600 hover:underline">+39 324 778 7644</a></p>
      </div>
    </div>
  </section>
</Layout>
