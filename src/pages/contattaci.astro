            </a>
          </div>
        </div>
        
        <a id="whatsapp-button" href="https://wa.me/393247787644" class="inline-block px-8 py-4 bg-black text-white rounded-md font-bold shadow-md hover:bg-gray-900 transition-colors">
          Contattaci via WhatsApp
        </a>
      </div>
    </div>
  </section>
</Layout>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const urlParams = new URLSearchParams(window.location.search);
    const plan = urlParams.get('plan');

    if (plan) {
      const emailLink = document.getElementById('email-link');
      const whatsappLinkText = document.getElementById('whatsapp-link-text');
      const whatsappButton = document.getElementById('whatsapp-button');

      const subject = encodeURIComponent(`Richiesta informazioni per: ${plan}`);
      const body = encodeURIComponent(`Ciao, sarei interessato/a al piano "${plan}". Vorrei ricevere maggiori informazioni.`);
      const whatsappText = encodeURIComponent(`Ciao, sarei interessato/a al piano "${plan}". Vorrei ricevere maggiori informazioni.`);

      if (emailLink) {
        (emailLink as HTMLAnchorElement).href = `mailto:deniscazzulo@icloud.com?subject=${subject}&body=${body}`;
      }
      if (whatsappLinkText) {
        (whatsappLinkText as HTMLAnchorElement).href = `https://wa.me/393247787644?text=${whatsappText}`;
      }
      if (whatsappButton) {
        (whatsappButton as HTMLAnchorElement).href = `https://wa.me/393247787644?text=${whatsappText}`;
      }
    }
  });
</script>
