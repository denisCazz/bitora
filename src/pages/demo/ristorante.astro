---
import Layout from '../../layouts/Layout.astro';
---

<Layout 
  title="Demo Ristorante - Da Mario | Ecosistema NFC Bitora"
  description="Demo live di un ristorante che utilizza l'ecosistema NFC di Bitora: menu digitale, prenotazioni online, recensioni e chatbot AI integrata."
>
  <!-- Demo Restaurant Page -->
  <section class="min-h-screen bg-gradient-to-br from-red-50 to-orange-50">
    <!-- Header Demo -->
    <div class="bg-white dark:bg-gray-900 shadow-sm border-b">
      <div class="container mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-gradient-to-r from-red-600 to-orange-600 rounded-full flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v13m0-13V6a2 2 0 112 2h-2zm0 0V5.5A2.5 2.5 0 109.5 8H12zm-7 4h14M5 12a2 2 0 110-4h14a2 2 0 110 4M5 12v7a2 2 0 002 2h10a2 2 0 002-2v-7"/>
              </svg>
            </div>
            <div>
              <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Ristorante Da Mario</h1>
              <p class="text-sm text-gray-600 dark:text-gray-300">Cucina Italiana Autentica</p>
            </div>
          </div>
          <div class="flex items-center gap-2">
            <span class="inline-flex items-center gap-1 bg-green-100 text-green-800 text-xs font-medium px-2 py-1 rounded-full">
              <span class="w-2 h-2 bg-green-500 rounded-full"></span>
              NFC Attivo
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Content -->
    <div class="container mx-auto px-4 py-8">
      <div class="grid lg:grid-cols-3 gap-8">
        <!-- Menu Digitale -->
        <div class="lg:col-span-2">
          <div class="bg-white dark:bg-gray-900 rounded-xl shadow-lg p-6 mb-6">
            <div class="flex items-center gap-3 mb-6">
              <div class="w-10 h-10 bg-red-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                </svg>
              </div>
              <div>
                <h2 class="text-xl font-bold text-gray-900 dark:text-white">Menu Digitale</h2>
                <p class="text-sm text-gray-600 dark:text-gray-300">Aggiornato in tempo reale</p>
              </div>
            </div>
            
            <!-- Menu Categories -->
            <div class="space-y-6">
              <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                  <span class="w-2 h-2 bg-red-500 rounded-full"></span>
                  Antipasti
                </h3>
                <div class="space-y-3">
                  <div class="flex justify-between items-start p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
                    <div class="flex-1">
                      <h4 class="font-medium text-gray-900 dark:text-white">Antipasto della Casa</h4>
                      <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">Selezione di formaggi, salumi e bruschette</p>
                    </div>
                    <span class="text-lg font-bold text-gray-900 dark:text-white ml-4">€18</span>
                  </div>
                  <div class="flex justify-between items-start p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
                    <div class="flex-1">
                      <h4 class="font-medium text-gray-900 dark:text-white">Burrata con Pomodori</h4>
                      <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">Burrata fresca di giornata con pomodori del Vesuvio</p>
                    </div>
                    <span class="text-lg font-bold text-gray-900 dark:text-white ml-4">€14</span>
                  </div>
                </div>
              </div>

              <div>
                <h3 class="text-lg font-semibold text-gray-900 dark:text-white mb-4 flex items-center gap-2">
                  <span class="w-2 h-2 bg-red-500 rounded-full"></span>
                  Primi Piatti
                </h3>
                <div class="space-y-3">
                  <div class="flex justify-between items-start p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
                    <div class="flex-1">
                      <h4 class="font-medium text-gray-900 dark:text-white">Spaghetti alla Carbonara</h4>
                      <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">Ricetta tradizionale romana</p>
                    </div>
                    <span class="text-lg font-bold text-gray-900 dark:text-white ml-4">€16</span>
                  </div>
                  <div class="flex justify-between items-start p-4 bg-gray-50 dark:bg-gray-800 rounded-lg">
                    <div class="flex-1">
                      <h4 class="font-medium text-gray-900 dark:text-white">Risotto ai Porcini</h4>
                      <p class="text-sm text-gray-600 dark:text-gray-300 mt-1">Con funghi porcini freschi e parmigiano</p>
                    </div>
                    <span class="text-lg font-bold text-gray-900 dark:text-white ml-4">€18</span>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Sidebar -->
        <div class="space-y-6">
          <!-- Prenotazione Rapida -->
          <div class="bg-white dark:bg-gray-900 rounded-xl shadow-lg p-6">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 bg-blue-100 rounded-lg flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a4 4 0 118 0v4m-4 8a4 4 0 11-8 0v-4m4-4a4 4 0 118 0v4"/>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-gray-900 dark:text-white">Prenota Ora</h3>
            </div>
            <form class="space-y-4">
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Data</label>
                <input 
                  type="date" 
                  class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent"
                  value="2024-01-15"
                >
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Orario</label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent">
                  <option>19:00</option>
                  <option>19:30</option>
                  <option>20:00</option>
                  <option>20:30</option>
                  <option>21:00</option>
                </select>
              </div>
              <div>
                <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">Persone</label>
                <select class="w-full px-3 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent">
                  <option>2 persone</option>
                  <option>3 persone</option>
                  <option>4 persone</option>
                  <option>5 persone</option>
                  <option>6+ persone</option>
                </select>
              </div>
              <button 
                type="submit" 
                class="w-full bg-red-600 hover:bg-red-700 text-white font-medium py-3 px-4 rounded-lg transition-colors"
              >
                Conferma Prenotazione
              </button>
            </form>
          </div>

          <!-- Informazioni -->
          <div class="bg-white dark:bg-gray-900 rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Informazioni</h3>
            <div class="space-y-3">
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-gray-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
                </svg>
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-white">Indirizzo</p>
                  <p class="text-sm text-gray-600 dark:text-gray-300">Via Roma 123, Milano</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-gray-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
                </svg>
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-white">Telefono</p>
                  <p class="text-sm text-gray-600 dark:text-gray-300">+39 02 1234567</p>
                </div>
              </div>
              <div class="flex items-start gap-3">
                <svg class="w-5 h-5 text-gray-400 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
                <div>
                  <p class="text-sm font-medium text-gray-900 dark:text-white">Orari</p>
                  <p class="text-sm text-gray-600 dark:text-gray-300">Mar-Dom: 19:00-23:00</p>
                </div>
              </div>
            </div>
          </div>

          <!-- Recensioni -->
          <div class="bg-white dark:bg-gray-900 rounded-xl shadow-lg p-6">
            <h3 class="text-lg font-bold text-gray-900 dark:text-white mb-4">Recensioni</h3>
            <div class="space-y-4">
              <div class="border-b border-gray-100 pb-4 last:border-0 last:pb-0">
                <div class="flex items-center gap-2 mb-2">
                  <div class="flex text-yellow-400">
                    <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                      <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                    </svg>
                    <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                      <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                    </svg>
                    <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                      <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                    </svg>
                    <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                      <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                    </svg>
                    <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                      <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                    </svg>
                  </div>
                  <span class="text-sm font-medium text-gray-900 dark:text-white">Marco R.</span>
                </div>
                <p class="text-sm text-gray-600 dark:text-gray-300">"Esperienza fantastica! La carbonara è la migliore di Milano. Prenotazione super veloce!"</p>
              </div>
              <div class="border-b border-gray-100 pb-4 last:border-0 last:pb-0">
                <div class="flex items-center gap-2 mb-2">
                  <div class="flex text-yellow-400">
                    <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                      <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                    </svg>
                    <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                      <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                    </svg>
                    <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                      <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                    </svg>
                    <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                      <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                    </svg>
                    <svg class="w-4 h-4 fill-current" viewBox="0 0 20 20">
                      <path d="M10 15l-5.878 3.09 1.123-6.545L.489 6.91l6.572-.955L10 0l2.939 5.955 6.572.955-4.756 4.635 1.123 6.545z"/>
                    </svg>
                  </div>
                  <span class="text-sm font-medium text-gray-900 dark:text-white">Giulia M.</span>
                </div>
                <p class="text-sm text-gray-600 dark:text-gray-300">"Servizio impeccabile e ambiente accogliente. Il menu digitale è comodissimo!"</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Chatbot Simulation -->
    <div class="fixed bottom-6 right-6 z-50">
      <div class="bg-white dark:bg-gray-900 rounded-xl shadow-2xl w-80 max-w-[calc(100vw-3rem)]" id="chatbot" style="display: none;">
        <div class="flex items-center justify-between p-4 bg-red-600 text-white rounded-t-xl">
          <div class="flex items-center gap-3">
            <div class="w-8 h-8 bg-white dark:bg-gray-900/20 rounded-full flex items-center justify-center">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
            </div>
            <div>
              <p class="font-medium">Assistente AI</p>
              <p class="text-xs opacity-90">Online</p>
            </div>
          </div>
          <button onclick="toggleChat()" class="text-white hover:bg-white dark:bg-gray-900/20 p-1 rounded">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
            </svg>
          </button>
        </div>
        <div class="p-4 h-64 overflow-y-auto space-y-3">
          <div class="flex gap-3">
            <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center flex-shrink-0">
              <svg class="w-4 h-4 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
            </div>
            <div class="bg-gray-100 dark:bg-gray-700 rounded-lg p-3 max-w-[70%]">
              <p class="text-sm">Ciao! Sono l'assistente del Ristorante Da Mario. Come posso aiutarti oggi?</p>
            </div>
          </div>
        </div>
        <div class="p-4 border-t">
          <div class="flex gap-2">
            <input 
              type="text" 
              placeholder="Scrivi un messaggio..." 
              class="flex-1 px-3 py-2 border border-gray-300 rounded-lg text-sm focus:ring-2 focus:ring-red-500 focus:border-transparent"
            >
            <button class="bg-red-600 hover:bg-red-700 text-white p-2 rounded-lg transition-colors">
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
              </svg>
            </button>
          </div>
        </div>
      </div>
      
      <button 
        onclick="toggleChat()" 
        class="bg-red-600 hover:bg-red-700 text-white w-14 h-14 rounded-full flex items-center justify-center shadow-2xl transition-all duration-300 hover:scale-110"
        id="chat-toggle"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
        </svg>
      </button>
    </div>

    <!-- Back to Ecosystem Button -->
    <div class="fixed bottom-6 left-6 z-40">
      <a 
        href="/nfc-ecosystem" 
        class="inline-flex items-center gap-2 bg-white dark:bg-gray-900 hover:bg-gray-50 dark:bg-gray-800 text-gray-800 px-4 py-3 rounded-lg shadow-lg font-medium transition-all duration-300 hover:scale-105 border"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Torna all'Ecosistema
      </a>
    </div>
  </section>
</Layout>

<script>
  function toggleChat() {
    const chatbot = document.getElementById('chatbot');
    if (chatbot.style.display === 'none') {
      chatbot.style.display = 'block';
    } else {
      chatbot.style.display = 'none';
    }
  }
</script>

<!-- Structured Data for Demo -->
<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "Restaurant",
  "name": "Ristorante Da Mario",
  "description": "Demo di cucina italiana autentica con ecosistema NFC integrato",
  "url": "https://bitora.it/demo/ristorante",
  "telephone": "+39 02 1234567",
  "address": {
    "@type": "PostalAddress",
    "streetAddress": "Via Roma 123",
    "addressLocality": "Milano",
    "addressCountry": "IT"
  },
  "openingHours": "Tu-Su 19:00-23:00",
  "servesCuisine": "Italian",
  "priceRange": "€€",
  "hasMenu": {
    "@type": "Menu",
    "name": "Menu Digitale",
    "description": "Menu interattivo aggiornato in tempo reale"
  },
  "aggregateRating": {
    "@type": "AggregateRating",
    "ratingValue": "4.8",
    "reviewCount": "127"
  },
  "potentialAction": {
    "@type": "ReserveAction",
    "target": {
      "@type": "EntryPoint",
      "urlTemplate": "https://bitora.it/demo/ristorante#prenotazione"
    },
    "result": {
      "@type": "Reservation",
      "name": "Prenotazione Tavolo"
    }
  }
}
</script>
