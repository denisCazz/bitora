                    <p class="text-gray-700 dark:text-gray-300">{caseStudy.solution}</p>
                  </div>
                </div>
                
                <!-- Risultati -->
                <div class="grid grid-cols-2 gap-4 mb-8">
                  {caseStudy.results.map(result => (
                    <div class="text-center p-4 bg-white dark:bg-gray-800 rounded-xl shadow-md border dark:border-gray-600">
                      <div class="text-2xl font-bold text-primary mb-1">{result.metric}</div>
                      <div class="text-sm text-gray-600 dark:text-gray-400">{result.description}</div>
                    </div>
                  ))}
                </div>
                
                <!-- Testimonianza -->
                <blockquote class="border-l-4 border-primary pl-6 italic text-gray-700 dark:text-gray-300 mb-6">
