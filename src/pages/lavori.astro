        </div>
        
        {caseStudies.filter(cs => cs.featured).map(caseStudy => (
          <div class="mb-20 bg-gradient-to-br from-gray-50 to-white dark:from-gray-800 dark:to-gray-700 rounded-2xl p-8 md:p-12 shadow-xl">
            <div class="grid md:grid-cols-2 gap-12 items-center">
              <!-- Info -->
              <div>
                <div class="inline-flex items-center bg-primary/10 dark:bg-primary/20 text-primary px-3 py-1 rounded-full text-sm font-medium mb-4">
                  {caseStudy.category}
                </div>
                
                <h3 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900 dark:text-white">{caseStudy.title}</h3>
                <p class="text-xl text-gray-600 dark:text-gray-300 mb-6">{caseStudy.subtitle}</p>
                
                <div class="space-y-6 mb-8">
                  <div>
                    <h4 class="font-semibold text-gray-900 dark:text-white mb-2">üéØ La sfida</h4>
