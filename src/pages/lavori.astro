                  <footer class="not-italic font-semibold text-gray-900 dark:text-white mt-2">
                    ‚Äî {caseStudy.clientName}, {caseStudy.clientRole}
                  </footer>
                </blockquote>
                
                <div class="flex flex-wrap gap-4">
                  <a href={caseStudy.caseStudyUrl || `/progetti/${caseStudy.id}`} class="px-6 py-3 bg-primary text-white rounded-lg font-semibold hover:bg-primary-600 transition-colors">
                    Leggi il Case Study Completo
                  </a>
                  {caseStudy.siteUrl !== '#' && (
