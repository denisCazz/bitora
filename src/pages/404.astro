---
import Layout from '../layouts/Layout.astro';

// Pagina 404 avanzata con analytics e suggerimenti
const suggestedPages = [
  { title: 'Homepage', url: '/', description: 'Scopri i nostri servizi NFC' },
  { title: 'Prezzi', url: '/prezzi', description: 'Tutti i nostri piani tariffari' },
  { title: 'Chi Siamo', url: '/chi-siamo', description: 'La nostra storia e missione' },
  { title: 'Contatti', url: '/contattaci', description: 'Mettiti in contatto con noi' },
  { title: 'Shop', url: '/shop', description: 'I nostri prodotti NFC' },
  { title: 'Ecosistema NFC', url: '/nfc-ecosystem', description: 'Come funziona la tecnologia NFC' }
];

// Analytics: traccia 404 errors
const currentPath = Astro.url.pathname;
---

<Layout title="Pagina non trovata - 404" description="La pagina richiesta non √® stata trovata. Scopri le nostre alternative.">
  <div class="min-h-screen bg-gradient-to-br from-blue-50 to-indigo-100 flex items-center justify-center px-4">
    <div class="max-w-4xl w-full">
      <!-- Contenuto principale 404 -->
      <div class="text-center mb-12">
        <div class="mb-8">
          <h1 class="text-8xl font-bold text-transparent bg-clip-text bg-gradient-to-r from-blue-600 to-purple-600 mb-4">
            404
          </h1>
          <h2 class="text-3xl font-bold text-gray-800 mb-4">
            Oops! Pagina non trovata
          </h2>
          <p class="text-xl text-gray-600 max-w-2xl mx-auto">
            La pagina che stai cercando potrebbe essere stata rimossa, rinominata o √® temporaneamente non disponibile.
          </p>
        </div>

        <!-- Percorso richiesto -->
        <div class="bg-white/70 backdrop-blur-sm rounded-lg p-4 mb-8 max-w-2xl mx-auto">
          <p class="text-sm text-gray-500 mb-2">Percorso richiesto:</p>
          <code class="text-red-600 font-mono bg-red-50 px-3 py-1 rounded">
            {currentPath}
          </code>
        </div>

        <!-- Ricerca semplice -->
        <div class="bg-white/80 backdrop-blur-sm rounded-xl p-8 mb-12 max-w-2xl mx-auto shadow-lg">
          <h3 class="text-xl font-semibold text-gray-800 mb-4">
            üîç Prova a cercare quello che ti serve
          </h3>
          <div class="relative">
            <input
              type="text"
              id="searchInput"
              placeholder="Cerca servizi, prodotti, informazioni..."
              class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent text-gray-800"
            />
            <button
              onclick="performSearch()"
              class="absolute right-2 top-1/2 transform -translate-y-1/2 bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition-colors"
            >
              Cerca
            </button>
          </div>
        </div>
      </div>

      <!-- Pagine suggerite -->
      <div class="bg-white/80 backdrop-blur-sm rounded-xl p-8 shadow-lg">
        <h3 class="text-2xl font-bold text-gray-800 mb-6 text-center">
          üìç Pagine che potrebbero interessarti
        </h3>
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
          {suggestedPages.map((page) => (
            <a
              href={page.url}
              class="group bg-white rounded-lg p-6 shadow-md hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100"
            >
              <h4 class="font-semibold text-gray-800 mb-2 group-hover:text-blue-600 transition-colors">
                {page.title}
              </h4>
              <p class="text-gray-600 text-sm">
                {page.description}
              </p>
              <div class="mt-3 text-blue-600 text-sm font-medium group-hover:text-blue-700">
                Vai alla pagina ‚Üí
              </div>
            </a>
          ))}
        </div>
      </div>

      <!-- Azioni principali -->
      <div class="text-center mt-12">
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a
            href="/"
            class="inline-flex items-center justify-center px-8 py-3 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-lg hover:from-blue-700 hover:to-purple-700 transition-all duration-300 font-semibold shadow-lg hover:shadow-xl"
          >
            üè† Torna alla Homepage
          </a>
          <a
            href="/contattaci"
            class="inline-flex items-center justify-center px-8 py-3 bg-white text-gray-800 border-2 border-gray-300 rounded-lg hover:border-blue-600 hover:text-blue-600 transition-all duration-300 font-semibold"
          >
            üìû Contattaci per aiuto
          </a>
        </div>
      </div>
    </div>
  </div>  <script>
    // Analytics per 404
    if (typeof window !== 'undefined' && window.trackEvent) {
      window.trackEvent('page_404', {
        category: 'navigation',
        label: '404_error',
        custom: JSON.stringify({
          page_title: '404 - Page Not Found',
          page_location: window.location.href,
          requested_path: window.location.pathname
        })
      });
    }

    // Ricerca semplice
    function performSearch() {
      const searchInput = document.getElementById('searchInput') as HTMLInputElement;
      const query = searchInput?.value.trim();
      if (query) {
        // Redirect alla pagina di ricerca Google site-specific
        window.location.href = `https://www.google.com/search?q=site:bitora.it ${encodeURIComponent(query)}`;
      }
    }

    // Submit con Enter
    const searchInput = document.getElementById('searchInput') as HTMLInputElement;
    if (searchInput) {
      searchInput.addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
          performSearch();
        }
      });

      // Auto-focus sul campo di ricerca
      searchInput.focus();
    }

    // Rendi performSearch globale per l'onclick
    (window as any).performSearch = performSearch;
  </script>
</Layout>
