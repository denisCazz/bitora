---
import Layout from '../../layouts/Layout.astro';
import { caseStudies, getCaseStudyBySlug, type CaseStudy } from '../../data/caseStudies';

export function getStaticPaths() {
  return caseStudies.map((caseStudy) => ({
    params: { slug: caseStudy.slug },
    props: { caseStudy }
  }));
}

interface Props {
  caseStudy: CaseStudy;
}

const { caseStudy } = Astro.props;

// Trova altri progetti per la sezione "Altri progetti"
const altriProgetti = caseStudies
  .filter(cs => cs.slug !== caseStudy.slug)
  .slice(0, 3);
---

<Layout
  title={`${caseStudy.title} - Case Study | Bitora`}
  description={`Case study ${caseStudy.title}: ${caseStudy.subtitle}. Scopri come Bitora ha aiutato ${caseStudy.title} a migliorare la presenza digitale.`}
>
  <main class="bg-black text-white overflow-x-hidden selection:bg-indigo-500 selection:text-white">
    
    <!-- Hero Section -->
    <section class="relative min-h-[60vh] flex flex-col justify-end pb-16 px-6">
      <div class="absolute inset-0">
        <div class="absolute inset-0 bg-gradient-to-t from-black via-black/80 to-black/40 z-10"></div>
        <img 
          src={caseStudy.imageUrl} 
          alt={caseStudy.title}
          class="w-full h-full object-cover opacity-60"
        />
      </div>
      
      <div class="relative z-20 max-w-5xl mx-auto w-full">
        <a href="/lavori" class="inline-flex items-center text-gray-400 hover:text-white transition-colors mb-8 group">
          <svg class="w-5 h-5 mr-2 transform group-hover:-translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          Torna ai lavori
        </a>
        
        <div class="space-y-4">
          <div class="flex flex-wrap items-center gap-4">
            <span class="text-indigo-400 text-sm font-medium tracking-wider uppercase">{caseStudy.category}</span>
            <span class="text-gray-500">•</span>
            <span class="text-gray-400 text-sm">{caseStudy.location}</span>
            {caseStudy.isWip && (
              <span class="bg-indigo-600/20 border border-indigo-500/30 px-3 py-1 rounded-full text-xs font-medium uppercase tracking-wider text-indigo-300">
                In Corso
              </span>
            )}
          </div>
          
          <h1 class="text-4xl md:text-7xl font-bold tracking-tight">{caseStudy.title}</h1>
          <p class="text-xl md:text-2xl text-gray-400 font-light">{caseStudy.subtitle}</p>
        </div>
      </div>
    </section>

    <!-- Content -->
    <article class="max-w-5xl mx-auto px-6 py-16 space-y-20">
      
      <!-- Chi è il cliente -->
      <section class="reveal-on-scroll">
        <h2 class="text-3xl font-bold mb-6 flex items-center">
          <span class="w-12 h-[2px] bg-indigo-500 mr-4"></span>
          Chi è il cliente
        </h2>
        <p class="text-lg text-gray-300 leading-relaxed max-w-3xl">
          {caseStudy.clientDescription}
        </p>
      </section>

      <!-- Il problema -->
      <section class="reveal-on-scroll">
        <h2 class="text-3xl font-bold mb-6 flex items-center">
          <span class="w-12 h-[2px] bg-red-500 mr-4"></span>
          La sfida
        </h2>
        <div class="bg-red-950/20 border border-red-900/30 rounded-2xl p-8">
          <p class="text-lg text-gray-300 leading-relaxed">
            {caseStudy.problema}
          </p>
        </div>
      </section>

      <!-- La soluzione -->
      <section class="reveal-on-scroll">
        <h2 class="text-3xl font-bold mb-8 flex items-center">
          <span class="w-12 h-[2px] bg-green-500 mr-4"></span>
          La soluzione Bitora
        </h2>
        <div class="grid md:grid-cols-2 gap-6">
          {caseStudy.soluzione.map((sol, i) => (
            <div class="bg-white/[0.03] border border-white/10 rounded-2xl p-8 hover:border-indigo-500/30 transition-colors">
              <div class="w-10 h-10 bg-indigo-600/20 rounded-xl flex items-center justify-center mb-4">
                <span class="text-indigo-400 font-bold">{i + 1}</span>
              </div>
              <h3 class="text-xl font-bold mb-3 text-white">{sol.titolo}</h3>
              <p class="text-gray-400 leading-relaxed">{sol.descrizione}</p>
            </div>
          ))}
        </div>
      </section>

      <!-- Risultati -->
      <section class="reveal-on-scroll">
        <h2 class="text-3xl font-bold mb-8 flex items-center">
          <span class="w-12 h-[2px] bg-indigo-500 mr-4"></span>
          I risultati
        </h2>
        <div class="bg-gradient-to-br from-indigo-950/30 to-purple-950/20 border border-indigo-900/30 rounded-2xl p-8">
          <ul class="space-y-4">
            {caseStudy.risultati.map(risultato => (
              <li class="flex items-start">
                <svg class="w-6 h-6 text-green-500 mr-3 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                <span class="text-lg text-gray-300">{risultato}</span>
              </li>
            ))}
          </ul>
        </div>
      </section>

      <!-- Tecnologie -->
      <section class="reveal-on-scroll">
        <h2 class="text-3xl font-bold mb-6 flex items-center">
          <span class="w-12 h-[2px] bg-purple-500 mr-4"></span>
          Tecnologie e servizi
        </h2>
        <div class="flex flex-wrap gap-3">
          {caseStudy.tecnologie.map(tech => (
            <span class="bg-white/[0.05] border border-white/10 px-4 py-2 rounded-full text-sm text-gray-300">
              {tech}
            </span>
          ))}
        </div>
      </section>

      <!-- CTA -->
      {caseStudy.siteUrl && caseStudy.siteUrl !== '#' && (
        <section class="text-center py-12 reveal-on-scroll">
          <a 
            href={caseStudy.siteUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 bg-white text-black px-8 py-4 rounded-full font-medium text-lg transition-all hover:scale-105 hover:shadow-[0_0_30px_rgba(255,255,255,0.2)]"
          >
            Visita il sito
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
          </a>
        </section>
      )}

    </article>

    <!-- Altri progetti -->
    <section class="py-24 px-6 border-t border-white/5">
      <div class="max-w-7xl mx-auto">
        <h2 class="text-3xl font-bold mb-12 text-center">Altri progetti</h2>
        <div class="grid md:grid-cols-3 gap-8">
          {altriProgetti.map((progetto) => (
            <a href={`/progetti/${progetto.slug}`} class="group block">
              <article class="bg-white/[0.02] border border-white/5 rounded-2xl overflow-hidden hover:border-indigo-500/30 transition-all duration-300">
                <div class="aspect-video overflow-hidden">
                  <img 
                    src={progetto.imageUrl} 
                    alt={progetto.title}
                    class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-105 opacity-80 group-hover:opacity-100"
                  />
                </div>
                <div class="p-6">
                  <span class="text-indigo-400 text-xs font-medium tracking-wider uppercase">{progetto.category}</span>
                  <h3 class="text-xl font-bold mt-2 group-hover:text-indigo-300 transition-colors">{progetto.title}</h3>
                  <p class="text-gray-500 text-sm mt-1">{progetto.location}</p>
                </div>
              </article>
            </a>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Finale -->
    <section class="py-32 px-6 text-center">
      <div class="max-w-4xl mx-auto reveal-on-scroll">
        <h2 class="text-4xl md:text-6xl font-bold mb-8 tracking-tight">
          Vuoi risultati simili?
        </h2>
        <p class="text-xl text-gray-400 mb-12 max-w-2xl mx-auto font-light">
          Raccontaci la tua sfida. Costruiremo insieme la soluzione su misura.
        </p>
        <a href="/contattaci" class="inline-block px-8 py-4 bg-white text-black rounded-full font-medium text-lg transition-all hover:scale-105 hover:shadow-[0_0_30px_rgba(255,255,255,0.2)]">
          Inizia il tuo progetto
        </a>
      </div>
    </section>

  </main>
</Layout>

<style>
  .reveal-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 1s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .reveal-on-scroll.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.addEventListener('DOMContentLoaded', () => {
    const elements = document.querySelectorAll('.reveal-on-scroll');
    elements.forEach(el => observer.observe(el));
  });
</script>
