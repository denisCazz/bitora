---
import Layout from '../layouts/Layout.astro';
import { pricingPlans } from '../data/pricing';
import { faqs } from '../data/faq';
import { icons } from '../components/Icons';
---

<Layout title="Prezzi - Investimenti Trasparenti">
  <!-- Header Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 max-w-3xl text-center">
      <h1 class="text-5xl md:text-6xl font-bold mb-8">I Nostri Piani</h1>
      <p class="text-xl text-gray-600 leading-relaxed">
        Soluzioni trasparenti e senza sorprese, progettate per adattarsi alle esigenze di ogni
        business.
      </p>
    </div>
  </section>

  <!-- Pricing Cards Section -->
  <section class="py-24 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {
          pricingPlans.map(plan => (
            <div
              class={`bg-white rounded-lg shadow-lg overflow-hidden transition-all duration-300 hover:-translate-y-2 hover:shadow-xl ${plan.highlighted ? 'border-2 border-black relative' : 'border border-gray-100'}`}
            >
              {plan.highlighted && (
                <div class="absolute top-0 right-0 bg-black text-white text-xs font-bold px-3 py-1 uppercase tracking-wider">
                  Più popolare
                </div>
              )}
              <div class="p-8">
                <h3 class="text-2xl font-bold mb-4">{plan.title}</h3>
                <div class="mb-4">
                  <span class="text-4xl font-bold">{plan.price}</span>
                  {plan.period && <span class="text-gray-500">/{plan.period}</span>}
                </div>
                <p class="text-gray-600 mb-6">{plan.description}</p>

                <ul class="space-y-3 mb-8">
                  {plan.features.map(feature => (
                    <li class="flex items-center">
                      <div class="w-5 h-5 mr-2 text-black">
                        <Fragment set:html={icons.check} />
                      </div>
                      <span class="text-gray-600">{feature}</span>
                    </li>
                  ))}
                </ul>

                <a
                  href={plan.buttonUrl}
                  target="_blank"
                  rel="noopener noreferrer"
                  class={`block w-full py-3 px-4 text-center font-bold rounded-md transition-all duration-300 ${plan.highlighted ? 'bg-black text-white hover:bg-gray-900 transform hover:scale-105' : 'bg-gray-100 text-gray-800 hover:bg-gray-200'}`}
                >
                  {plan.buttonText}
                </a>
              </div>
            </div>
          ))
        }
      </div>
      <div class="mt-12 text-center">
        <p class="text-gray-600">
          Hai esigenze particolari? <a
            href="/contattaci"
            class="font-medium text-black border-b border-black hover:border-transparent transition-colors"
            >Contattaci</a
          > per una soluzione su misura.
        </p>
      </div>
    </div>
  </section>

  <!-- FAQ Section -->
  <section class="py-24 bg-white">
    <div class="container mx-auto px-4 max-w-3xl">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-8">Domande Frequenti</h2>
        <p class="text-xl text-gray-600">Hai domande? Probabilmente abbiamo già la risposta</p>
      </div>
      <div class="space-y-6">
        {
          faqs.map(faq => (
            <div class="border border-gray-200 rounded-lg overflow-hidden hover:shadow-md transition-shadow">
              <details class="group">
                <summary class="flex justify-between items-center p-6 cursor-pointer hover:bg-gray-50 transition-colors">
                  <h3 class="text-lg font-semibold text-gray-800">{faq.question}</h3>
                  <div class="text-gray-500 transition-transform duration-200 group-open:rotate-180">
                    <Fragment set:html={icons.chevronDown} />
                  </div>
                </summary>
                <div class="px-6 pb-6">
                  <p class="text-gray-600 leading-relaxed">{faq.answer}</p>
                </div>
              </details>
            </div>
          ))
        }
      </div>
    </div>
  </section>
</Layout>

