---
import Layout from '../layouts/Layout.astro';
import { nfcEcosystemPlans, comboPlans, webDesignPlans } from '../data/pricing';
import { faqs } from '../data/faq';
import { testimonials } from '../data/testimonials';
import { icons } from '../components/Icons';
---

<Layout title="Prezzi Siti Web e Tessere NFC Piemonte | Bitora - Torino, Carmagnola, Cuneo" description="Prezzi trasparenti per siti web e ecosistemi NFC in Piemonte. Piani da ‚Ç¨20/mese per ristoranti, hotel e professionisti a Torino, Carmagnola, Cuneo.">

  <!-- Hero Section -->
  <section class="py-20 md:py-28 bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-blue-900/20 dark:via-gray-900 dark:to-purple-900/20">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <div class="inline-flex items-center bg-primary/10 dark:bg-primary/20 text-primary px-4 py-2 rounded-full text-sm font-medium mb-6">
          üí∞ Prezzi trasparenti e chiari
        </div>
        
        <h1 class="text-5xl md:text-6xl font-bold tracking-tight mb-6 text-gray-900 dark:text-white">
          Investi nel <span class="text-primary">futuro digitale</span><br/>
          del tuo business
        </h1>
        
