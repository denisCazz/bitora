---
import Layout from '../layouts/Layout.astro';
import PricingCard from '../components/PricingCard.astro';

const pricingPlans = [
  {
    title: "Sito Vetrina",
    price: "€20",
    period: "mese",
    description: "Adatto per piccole imprese che desiderano una presenza professionale online.",
    features: [
      "Fino a 5 pagine",
      "Design responsive",
      "Dominio personalizzato",
      "Hosting incluso",
      "SEO base",
      "Supporto via email"
    ],
    buttonText: "Inizia ora",
    buttonUrl: "/contattaci",
    highlighted: false
  },
  {
    title: "Sito Vetrina Premium",
    price: "€500",
    period: null,
    description: "Pagamento una tantum per un sito web professionale, senza canoni mensili.",
    features: [
      "Fino a 5 pagine",
      "Design personalizzato",
      "Dominio (1° anno incluso)",
      "Hosting (1° anno incluso)",
      "SEO avanzato",
      "Assistenza prioritaria"
    ],
    buttonText: "Scegli questo piano",
    buttonUrl: "/contattaci",
    highlighted: true
  },
  {
    title: "Enterprise",
    price: "Su misura",
    period: null,
    description: "Soluzioni flessibili per progetti complessi con esigenze specifiche.",
    features: [
      "Pagine illimitate",
      "Design totalmente personalizzato",
      "Funzionalità avanzate",
      "E-commerce opzionale",
      "Strategia SEO completa",
      "Account manager dedicato"
    ],
    buttonText: "Richiedi preventivo",
    buttonUrl: "/contattaci",
    highlighted: false
  }
];

const faqs = [
  {
    question: "Quanto tempo serve per creare il sito?",
    answer: "La realizzazione del sito vetrina standard avviene in 3-5 giorni lavorativi. Progetti personalizzati possono richiedere tempi variabili."
  },
  {
    question: "Posso modificare il sito in autonomia?",
    answer: "Sì, grazie ad un CMS intuitivo potrai aggiornare testi e immagini in completa autonomia."
  },
  {
    question: "Cosa include l'ottimizzazione SEO?",
    answer: "Il piano base prevede meta tag, sitemap e contenuti ottimizzati; quello avanzato include analisi delle parole chiave e report dettagliati."
  },
  {
    question: "Come funziona il passaggio da un piano a un altro?",
    answer: "È possibile passare dal piano mensile a quello Premium in qualsiasi momento, con addebito della differenza."
  }
];
---

<Layout title="Prezzi - I Nostri Piani">
  <!-- Header Section -->
  <section class="py-20 bg-gradient-to-b from-white to-gray-50">
    <div class="container mx-auto px-4 max-w-3xl text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-4">Piani e Prezzi</h1>
      <p class="text-lg text-gray-700 leading-relaxed">
        Scegli il piano più adatto alla tua impresa. Chiarezza e trasparenza sono la nostra priorità.
      </p>
    </div>
  </section>
  
  <!-- Pricing Cards Section -->
  <section class="py-20 bg-white">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-8">
        {pricingPlans.map(plan => (
          <PricingCard
            title={plan.title}
            price={plan.price}
            period={plan.period ?? undefined}
            description={plan.description}
            features={plan.features}
            buttonText={plan.buttonText}
            buttonUrl={plan.buttonUrl}
            highlighted={plan.highlighted}
          />
        ))}
      </div>
      <div class="mt-12 text-center">
        <p class="text-gray-700">
          Per esigenze particolari, <a href="/contattaci" class="text-primary-600 font-medium hover:underline">contattaci</a> e realizzeremo una soluzione su misura.
        </p>
      </div>
    </div>
  </section>
  
  <!-- FAQ Section -->
  <section class="py-20 bg-gray-50">
    <div class="container mx-auto px-4 max-w-3xl">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold mb-4">Domande Frequenti</h2>
        <p class="text-lg text-gray-700 leading-relaxed">
          Risposte chiare alle domande più comuni sui nostri piani.
        </p>
      </div>
      <div class="space-y-6">
        {faqs.map((faq, index) => (
          <div class="border border-gray-200 rounded-lg overflow-hidden">
            <details class="group">
              <summary class="flex justify-between items-center p-6 cursor-pointer">
                <h3 class="text-lg font-medium text-gray-900">{faq.question}</h3>
                <svg class="w-6 h-6 text-gray-500 group-open:rotate-180 transition-transform" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 8.25l-7.5 7.5-7.5-7.5" />
                </svg>
              </summary>
              <div class="px-6 pb-6 text-gray-700 leading-relaxed">
                <p>{faq.answer}</p>
              </div>
            </details>
          </div>
        ))}
      </div>
    </div>
  </section>
</Layout>
