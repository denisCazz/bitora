  <section id="portfolio-web" class="py-24 bg-gray-50 dark:bg-gray-800 dark:bg-gray-800 transition-colors duration-300 scroll-mt-40">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-4xl font-bold mb-4 text-gray-900 dark:text-white dark:text-white">Web Design Tradizionale</h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 dark:text-gray-300 max-w-3xl mx-auto">
          I nostri servizi classici di web design per chi preferisce un approccio tradizionale
        </p>
      </div>
      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {
          webDesignPlans.map(plan => (
            <div class="bg-white dark:bg-gray-900 dark:bg-gray-900 rounded-lg shadow-lg overflow-hidden transition-all duration-300 hover:-translate-y-2 hover:shadow-xl dark:hover:shadow-gray-900/50 border border-gray-100 dark:border-gray-700">
              <div class="p-8">
                <h3 class="text-2xl font-bold mb-4 text-gray-900 dark:text-white dark:text-white">{plan.title}</h3>
                <div class="mb-4">
                  <span class="text-4xl font-bold text-gray-900 dark:text-white dark:text-white">{plan.price}</span>
                  {plan.period && <span class="text-gray-500 dark:text-gray-400">/{plan.period}</span>}
