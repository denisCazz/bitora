                  {plan.features.map(feature => (
                    <li class="flex items-center">
                      <div class="w-5 h-5 mr-2 text-indigo-600 dark:text-indigo-400">
                        <Fragment set:html={icons.check} />
                      </div>
                      <span class="text-gray-600 dark:text-gray-300 dark:text-gray-300">{feature}</span>
                    </li>
                  ))}
                </ul>

                <a
                  href={plan.buttonUrl}
                  class={`block w-full py-3 px-4 text-center font-bold rounded-md transition-all duration-300 ${plan.highlighted ? 'bg-indigo-600 hover:bg-indigo-700 dark:bg-indigo-500 dark:hover:bg-indigo-600 text-white transform hover:scale-105' : 'bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200'}`}
                >
                  {plan.buttonText}
                </a>
              </div>
            </div>
          ))
        }
      </div>

