---
import Layout from '../layouts/Layout.astro';
import { faqs } from '../data/faq';
import NeonCircles from '../components/NeonCircles.astro';
---

<Layout
  title="Percorsi di partnership e consulenza digitale | Bitora Piemonte"
  description="Scopri come Bitora accompagna aziende e professionisti in Piemonte con consulenze digitali su misura. Roadmap condivisa, supporto continuativo e pochi investimenti fissi: tessere NFC, sito vetrina e landing page."
>
  <main class="bg-black text-white overflow-x-hidden selection:bg-indigo-500 selection:text-white">
    
    <!-- Hero Section -->
    <section class="relative h-[70vh] flex flex-col justify-center items-center text-center px-4 overflow-hidden">
      <div class="absolute inset-0 bg-[radial-gradient(circle_at_center,_var(--tw-gradient-stops))] from-indigo-900/20 via-black to-black opacity-50"></div>
      <NeonCircles variant="hero" colors={['blue', 'orange']} />
      
      <div class="relative z-10 max-w-5xl mx-auto space-y-8 opacity-0 animate-fade-in-up" style="animation-delay: 0.2s; animation-fill-mode: forwards;">
        <h1 class="text-5xl md:text-8xl font-bold tracking-tight bg-clip-text text-transparent bg-gradient-to-b from-white to-white/60">
          Investi nel futuro.
        </h1>
        <p class="text-xl md:text-2xl text-gray-400 font-light max-w-3xl mx-auto leading-relaxed">
          Consulenza mirata, roadmap condivisa, supporto continuo. <br class="hidden md:block" />
          Dal primo audit fino alla crescita costante.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center pt-8">
          <a href="/contattaci" class="px-8 py-4 bg-white text-black rounded-full font-bold text-lg hover:scale-105 transition-transform">
            Prenota consulenza
          </a>
          <a href="https://wa.me/393514979670" class="px-8 py-4 bg-white/10 backdrop-blur-md border border-white/20 text-white rounded-full font-bold text-lg hover:bg-white/20 transition-all">
            Scrivici su WhatsApp
          </a>
        </div>
      </div>
    </section>

    <!-- Process Steps -->
    <section class="py-24 px-6 md:px-12 border-t border-white/5">
      <div class="max-w-7xl mx-auto">
        <div class="grid md:grid-cols-3 gap-8">
          {[
            {
              step: "01",
              title: 'Scoperta e insight',
              description: 'Colloquio con i referenti, analisi della presenza digitale attuale, reputazione locale e visibilità su Google, Bing, ChatGPT e Gemini.'
            },
            {
              step: "02",
              title: 'Blueprint operativo',
              description: 'Roadmap con priorità condivise, proposte di investimento, KPI e timeline. Identifichiamo asset chiave: sito, landing, NFC, campagne.'
            },
            {
              step: "03",
              title: 'Partnership attiva',
              description: 'Sviluppo, copywriting, SEO locale e ottimizzazioni per answer engine. Report mensili e supporto diretto del team Bitora.'
            }
          ].map((item, index) => (
            <div class="group p-8 rounded-3xl bg-zinc-900/50 border border-white/10 hover:bg-zinc-900 transition-all duration-500 reveal-on-scroll" style={`transition-delay: ${index * 100}ms`}>
              <span class="text-6xl font-bold text-white/5 group-hover:text-indigo-500/20 transition-colors duration-500">{item.step}</span>
              <h3 class="text-2xl font-bold text-white mt-4 mb-4">{item.title}</h3>
              <p class="text-gray-400 leading-relaxed">{item.description}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Pricing Cards -->
    <section class="py-24 px-6 md:px-12 bg-zinc-900/30">
      <div class="max-w-7xl mx-auto">
        <div class="text-center mb-16 reveal-on-scroll">
          <h2 class="text-3xl md:text-5xl font-bold text-white mb-6">Investimenti definiti</h2>
          <p class="text-xl text-gray-400 max-w-2xl mx-auto">
            Tre acceleratori con prezzo trasparente. Tutto il resto è personalizzato sulle tue esigenze.
          </p>
        </div>

        <div class="grid lg:grid-cols-3 gap-8">
          <!-- Card 1 -->
          <div class="p-8 rounded-3xl bg-black border border-white/10 hover:border-indigo-500/50 transition-all duration-500 reveal-on-scroll">
            <h3 class="text-xl font-bold text-white mb-2">Tessera NFC Premium</h3>
            <div class="flex items-baseline gap-1 mb-6">
              <span class="text-4xl font-bold text-white">€20</span>
              <span class="text-gray-500">/cad</span>
            </div>
            <p class="text-gray-400 text-sm mb-8 min-h-[60px]">
              Materiale resistente, grafica personalizzata, programmazione e landing rapida incluse.
            </p>
            <ul class="space-y-4 mb-8">
              <li class="flex items-center gap-3 text-gray-300 text-sm">
                <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                Consegna in 5-7 giorni
              </li>
              <li class="flex items-center gap-3 text-gray-300 text-sm">
                <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                QR di backup incluso
              </li>
              <li class="flex items-center gap-3 text-gray-300 text-sm">
                <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                Aggiornamenti illimitati
              </li>
            </ul>
            <a href="/contattaci?plan=nfc" class="block w-full py-3 text-center rounded-xl border border-white/20 text-white hover:bg-white hover:text-black transition-all font-medium">
              Ordina ora
            </a>
          </div>

          <!-- Card 2 (Featured) -->
          <div class="relative p-8 rounded-3xl bg-zinc-900 border border-indigo-500/30 hover:border-indigo-500 transition-all duration-500 reveal-on-scroll delay-100 transform scale-105 z-10 shadow-2xl shadow-indigo-500/10">
            <div class="absolute top-0 right-0 bg-indigo-600 text-white text-xs font-bold px-3 py-1 rounded-bl-xl rounded-tr-2xl">POPOLARE</div>
            <h3 class="text-xl font-bold text-white mb-2">Sito Vetrina</h3>
            <div class="flex items-baseline gap-1 mb-6">
              <span class="text-4xl font-bold text-white">€500</span>
              <span class="text-gray-500">una tantum</span>
            </div>
            <p class="text-gray-400 text-sm mb-8 min-h-[60px]">
              Fino a 4 pagine ottimizzate per mobile, SEO locale e answer engine. Design minimal e analytics.
            </p>
            <ul class="space-y-4 mb-8">
              <li class="flex items-center gap-3 text-gray-300 text-sm">
                <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                Design Responsive
              </li>
              <li class="flex items-center gap-3 text-gray-300 text-sm">
                <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                SEO Locale & AI Ready
              </li>
              <li class="flex items-center gap-3 text-gray-300 text-sm">
                <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                Analytics GDPR Compliant
              </li>
              <li class="flex items-center gap-3 text-gray-300 text-sm">
                <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                Pagine extra +€100
              </li>
            </ul>
            <a href="/contattaci?plan=sito" class="block w-full py-3 text-center rounded-xl bg-white text-black hover:bg-gray-200 transition-all font-bold shadow-lg shadow-white/10">
              Inizia il progetto
            </a>
          </div>

          <!-- Card 3 -->
          <div class="p-8 rounded-3xl bg-black border border-white/10 hover:border-indigo-500/50 transition-all duration-500 reveal-on-scroll delay-200">
            <h3 class="text-xl font-bold text-white mb-2">Landing Page</h3>
            <div class="flex items-baseline gap-1 mb-6">
              <span class="text-4xl font-bold text-white">€300</span>
              <span class="text-gray-500">una tantum</span>
            </div>
            <p class="text-gray-400 text-sm mb-8 min-h-[60px]">
              Pensata per campagne mirate, con copywriting persuasivo, CTA chiare e moduli ottimizzati.
            </p>
            <ul class="space-y-4 mb-8">
              <li class="flex items-center gap-3 text-gray-300 text-sm">
                <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                Copywriting Persuasivo
              </li>
              <li class="flex items-center gap-3 text-gray-300 text-sm">
                <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                Moduli Ottimizzati
              </li>
              <li class="flex items-center gap-3 text-gray-300 text-sm">
                <svg class="w-5 h-5 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                Consegna in 10 giorni
              </li>
            </ul>
            <a href="/contattaci?plan=landing" class="block w-full py-3 text-center rounded-xl border border-white/20 text-white hover:bg-white hover:text-black transition-all font-medium">
              Richiedi ora
            </a>
          </div>
        </div>

        <div class="mt-12 p-6 rounded-2xl bg-indigo-900/20 border border-indigo-500/20 text-center text-indigo-300 text-sm reveal-on-scroll">
          Tutti gli altri servizi (ecommerce, automazioni, CRM, formazione, campagne) vengono preventivati in consulenza dopo la definizione della roadmap.
        </div>
      </div>
    </section>

    <!-- Included Services -->
    <section class="py-24 px-6 md:px-12 border-t border-white/5">
      <div class="max-w-7xl mx-auto">
        <div class="p-12 rounded-3xl bg-zinc-900/50 border border-white/10 reveal-on-scroll">
          <div class="flex flex-col lg:flex-row lg:items-center justify-between gap-8 mb-12">
            <div>
              <h2 class="text-3xl font-bold text-white mb-2">Cosa ricevi collaborando con noi</h2>
              <p class="text-gray-400">Il valore aggiunto di una partnership Bitora.</p>
            </div>
            <a href="/contattaci" class="inline-flex items-center gap-2 text-indigo-400 hover:text-indigo-300 transition-colors font-medium">
              Parla con un consulente 
              <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path></svg>
            </a>
          </div>

          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
            {[
              'Un partner unico per strategia, sviluppo, contenuti e analisi',
              'Documentazione chiara: roadmap, backlog e report mensili',
              'Supporto on-demand via Slack, email e WhatsApp Business',
              'Ottimizzazioni SEO locali e answer engine optimization',
              'Testing performance e accessibilità su dispositivi reali',
              'Formazione del personale su nuovi flussi digitali'
            ].map(item => (
              <div class="flex items-start gap-4 p-4 rounded-xl bg-black/40 border border-white/5">
                <div class="w-6 h-6 rounded-full bg-indigo-500/20 flex items-center justify-center flex-shrink-0 mt-0.5">
                  <svg class="w-3 h-3 text-indigo-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path></svg>
                </div>
                <span class="text-gray-300 text-sm leading-relaxed">{item}</span>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- FAQ -->
    <section class="py-24 px-6 md:px-12 bg-zinc-900/30">
      <div class="max-w-4xl mx-auto">
        <div class="text-center mb-16 reveal-on-scroll">
          <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Domande Frequenti</h2>
          <p class="text-gray-400">Dubbi sulla partnership? Rispondiamo qui.</p>
        </div>

        <div class="space-y-4 reveal-on-scroll">
          {faqs.slice(0, 6).map((faq, index) => (
            <div class="group rounded-2xl bg-black border border-white/10 overflow-hidden transition-all duration-300 hover:border-white/20">
              <button
                class="faq-trigger flex w-full items-center justify-between p-6 text-left focus:outline-none"
                data-target={`faq-${index}`}
              >
                <span class="font-medium text-white group-hover:text-indigo-400 transition-colors">{faq.question}</span>
                <span class="faq-icon text-indigo-500 text-xl transition-transform duration-300">+</span>
              </button>
              <div id={`faq-${index}`} class="faq-content hidden px-6 pb-6 text-gray-400 text-sm leading-relaxed border-t border-white/5 pt-4">
                <p>{faq.answer}</p>
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA -->
    <section class="py-24 px-6 md:px-12">
      <div class="max-w-5xl mx-auto text-center reveal-on-scroll">
        <h2 class="text-4xl md:text-6xl font-bold text-white mb-8 tracking-tight">
          Pronto a partire?
        </h2>
        <p class="text-xl text-gray-400 mb-12 max-w-2xl mx-auto">
          Raccontaci le tue priorità. Disegniamo insieme il percorso migliore per la tua attività.
        </p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <a href="/contattaci" class="px-8 py-4 bg-white text-black rounded-full font-bold text-lg hover:scale-105 transition-transform shadow-[0_0_20px_rgba(255,255,255,0.2)]">
            Inizia ora
          </a>
        </div>
      </div>
    </section>

  </main>
</Layout>

<style>
  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .animate-fade-in-up {
    animation: fadeInUp 0.8s ease-out forwards;
  }

  .reveal-on-scroll {
    opacity: 0;
    transform: translateY(30px);
    transition: all 1s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .reveal-on-scroll.is-visible {
    opacity: 1;
    transform: translateY(0);
  }
</style>

<script>
  // Animation Observer
  const observerOptions = {
    root: null,
    rootMargin: '0px',
    threshold: 0.1
  };

  const observer = new IntersectionObserver((entries) => {
    entries.forEach(entry => {
      if (entry.isIntersecting) {
        entry.target.classList.add('is-visible');
        observer.unobserve(entry.target);
      }
    });
  }, observerOptions);

  document.addEventListener('DOMContentLoaded', () => {
    const elements = document.querySelectorAll('.reveal-on-scroll');
    elements.forEach(el => observer.observe(el));

    // FAQ Logic
    const triggers = document.querySelectorAll('.faq-trigger');
    triggers.forEach(trigger => {
      trigger.addEventListener('click', () => {
        const targetId = trigger.getAttribute('data-target');
        const content = targetId ? document.getElementById(targetId) : null;
        const icon = trigger.querySelector('.faq-icon');

        if (!content || !icon) return;

        const isOpen = !content.classList.contains('hidden');
        
        // Close all others
        document.querySelectorAll('.faq-content').forEach(el => el.classList.add('hidden'));
        document.querySelectorAll('.faq-icon').forEach(el => {
          el.textContent = '+';
          (el as HTMLElement).style.transform = 'rotate(0deg)';
        });

        if (!isOpen) {
          content.classList.remove('hidden');
          icon.textContent = '−';
          (icon as HTMLElement).style.transform = 'rotate(180deg)';
        }
      });
    });
  });
</script>
