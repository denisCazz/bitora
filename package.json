{
  "name": "bitora",
  "type": "module",
  "version": "1.0.0",
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",    "build": "astro build && npm run copy-deploy-files",
    "copy-deploy-files": "powershell -Command \"Copy-Item web.config dist/\"",
    "build:aruba": "astro build && powershell -Command \"Copy-Item web.config dist/\"",
    "build:production": "npm run build && npm run optimize",
    "optimize": "echo Running post-build optimizations...",
    "preview": "astro preview",
    "astro": "astro",
    "check": "astro check",
    "lint": "prettier --check . && eslint .",
    "format": "prettier --write .",
    "analyze": "npx vite-bundle-analyzer dist",
    "test": "playwright test",
    "test:ui": "playwright test --ui",
    "security-check": "npm audit && npm outdated"
  },
  "dependencies": {
    "@astrojs/check": "^0.9.4",
    "@astrojs/react": "^4.3.0",
    "@astrojs/sitemap": "^3.3.1",
    "@astrojs/tailwind": "^5.1.5",
    "astro": "^5.9.2",
    "astro-compressor": "^1.0.0",
    "astro-robots-txt": "^1.0.0",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-icons": "^5.5.0",
    "tailwindcss": "^3.4.17",
    "terser": "^5.42.0",
    "web-vitals": "^5.0.3"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "astro-eslint-parser": "^1.2.2",
    "eslint": "^8.57.0",
    "eslint-plugin-astro": "^0.31.4",
    "lightningcss": "^1.30.1",
    "prettier": "^3.3.3",
    "prettier-plugin-astro": "^0.13.0",
    "typescript": "^5.8.3",
    "vite-bundle-analyzer": "^0.10.4"
  }
}
